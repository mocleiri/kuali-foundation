<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <properties>
    <oracle.version>10.2.0.3.0</oracle.version>
    <sql.username>KSEMBEDDED</sql.username>
    <sql.password>KSEMBEDDED</sql.password>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.4-SNAPSHOT</version>
          <configuration>
            <url>jdbc:oracle:thin:@localhost:1521:XE</url>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
          </configuration>
          <dependencies>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
          </dependencies>
          <executions>
            <execution>
              <id>liquibase-schema</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>tables,columns</types>
                <changeLogFile>${project.build.directory}/liquibase/schema.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>liquibase-data</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>data</types>
                <changeLogFile>${project.build.directory}/liquibase/data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>liquibase-constraints</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>views, primaryKeys, uniqueConstraints, indexes, foreignKeys, sequences</types>
                <changeLogFile>${project.build.directory}/liquibase/constraints.xml</changeLogFile>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
