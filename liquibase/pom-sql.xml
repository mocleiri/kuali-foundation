<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <description>This pom demonstrates generating SQL for updating a database using a Liquibase change log file</description>
  <properties>
    <sql.database>LIQUIBASE</sql.database>
    <sql.username>${sql.database}</sql.username>
    <sql.password>${sql.database}</sql.password>
    <db.phase>process-resources</db.phase>
    <kuali.sql.version>1.0.2-SNAPSHOT</kuali.sql.version>
    <dba.phase>process-resources</dba.phase>
    <liquibase.phase>process-resources</liquibase.phase>
    <schema.phase>${liquibase.phase}</schema.phase>
    <data.phase>${liquibase.phase}</data.phase>
    <constraints.phase>${liquibase.phase}</constraints.phase>
    <liquibase.schema.output>${project.build.directory}/${db.vendor}/${kuali.app}-${app.version}/sql/schema.sql</liquibase.schema.output>
    <liquibase.data.output>${project.build.directory}/${db.vendor}/${kuali.app}-${app.version}/sql/data.sql</liquibase.data.output>
    <liquibase.constraints.output>${project.build.directory}/${db.vendor}/${kuali.app}-${app.version}/sql/constraints.sql</liquibase.constraints.output>
    <liquibase.schema>src/test/resources/${db.vendor}/${kuali.app}-${app.version}/xml/schema.xml</liquibase.schema>
    <liquibase.constraints>src/test/resources/${db.vendor}/${kuali.app}-${app.version}/xml/constraints.xml</liquibase.constraints>

    <oracle.dba.username>SYSTEM</oracle.dba.username>
    <oracle.dba.password>CHANGE_ON_INSTALL</oracle.dba.password>
    <oracle.driver>oracle.jdbc.driver.OracleDriver</oracle.driver>
    <oracle.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.url>
    <oracle.dba.url>${oracle.url}</oracle.dba.url>
    <oracle.version>10.2.0.3.0</oracle.version>

    <mysql.dba.username>root</mysql.dba.username>
    <mysql.dba.password></mysql.dba.password>
    <mysql.driver>com.mysql.jdbc.Driver</mysql.driver>
    <mysql.dba.url>jdbc:mysql://localhost</mysql.dba.url>
    <mysql.url>${mysql.dba.url}/${sql.database}</mysql.url>
    <mysql.version>5.1.13</mysql.version>

    <h2.driver>org.h2.Driver</h2.driver>
    <h2.port>9092</h2.port>
    <h2.dir>${project.build.directory}/h2</h2.dir>
    <h2.base.url>jdbc:h2:tcp://localhost:${h2.port}/${h2.dir}/${sql.database}</h2.base.url>
    <!-- Create an H2 db, and keep it open until the JVM exits -->
    <h2.dba.url>${h2.base.url};DB_CLOSE_DELAY=-1</h2.dba.url>
    <!-- Only connect if the db already exists -->
    <h2.url>${h2.base.url};IFEXISTS=true</h2.url>
    <h2.version>1.3.158</h2.version>
    <liquibase.changeLogFile>${project.basedir}/src/test/resources/simple.xml</liquibase.changeLogFile>
    <liquibase.output>${project.build.directory}/liquibase/${db.vendor}.sql</liquibase.output>
    <dba.drop>classpath:org/kuali/sql/${db.vendor}/drop.sql</dba.drop>
    <dba.create>classpath:org/kuali/sql/${db.vendor}/create.sql</dba.create>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.2</version>
          <executions>
            <execution>
              <id>h2-db</id>
              <phase>initialize</phase>
              <goals>
                <goal>java</goal>
              </goals>
              <configuration>
                <mainClass>org.h2.tools.Server</mainClass>
                <arguments>
                  <argument>-tcp</argument>
                  <argument>-tcpDaemon</argument>
                  <argument>-tcpPort</argument>
                  <argument>${h2.port}</argument>
                  <argument>-baseDir</argument>
                  <argument>${h2.dir}</argument>
                </arguments>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>1.0-alpha-3-SNAPSHOT</version>
          <executions>
            <execution>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <urls>
                  <url>classpath:org/kuali/sql/sql.properties</url>
                </urls>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>${kuali.sql.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
          <configuration>
            <forceMojoExecution>true</forceMojoExecution>
            <delimiter>/</delimiter>
            <delimiterType>row</delimiterType>
            <enableFiltering>true</enableFiltering>
          </configuration>
          <executions>
            <execution>
              <id>dba</id>
              <phase>${dba.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${jdbc.driver}</driver>
                <url>${dba.url}</url>
                <username>${dba.username}</username>
                <password>${dba.password}</password>
                <resourceLocations>
                  <resourceLocation>${dba.drop}</resourceLocation>
                  <resourceLocation>${dba.create}</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.h2database</groupId>
              <artifactId>h2</artifactId>
              <version>${h2.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>${mysql.version}</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>${kuali.sql.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.4-SNAPSHOT</version>
          <configuration>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
          </configuration>
          <executions>
            <execution>
              <id>schema</id>
              <phase>${schema.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
              </goals>
              <configuration>
                <changeLogFile>${liquibase.schema}</changeLogFile>
                <migrationSqlOutputFile>${liquibase.schema.output}</migrationSqlOutputFile>
                <url>${jdbc.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>data</id>
              <phase>${data.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
              </goals>
              <configuration>
                <changeLogFile>${liquibase.data}</changeLogFile>
                <migrationSqlOutputFile>${liquibase.data.output}</migrationSqlOutputFile>
                <url>${jdbc.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>constraints</id>
              <phase>${constraints.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
              </goals>
              <configuration>
                <changeLogFile>${liquibase.constraints}</changeLogFile>
                <migrationSqlOutputFile>${liquibase.constraints.output}</migrationSqlOutputFile>
                <url>${jdbc.url}</url>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.h2database</groupId>
              <artifactId>h2</artifactId>
              <version>${h2.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>${mysql.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>${h2.version}</version>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>student</id>
      <properties>
        <kuali.app>student</kuali.app>
        <app.version>1.3-build-112</app.version>
        <data.phase>none</data.phase>
      </properties>
    </profile>
    <profile>
      <id>rice</id>
      <properties>
        <kuali.app>rice</kuali.app>
        <app.version>2.0.0-m7</app.version>
        <data.phase>none</data.phase>
      </properties>
    </profile>
    <profile>
      <id>mysql</id>
      <properties>
        <db.vendor>mysql</db.vendor>
        <jdbc.driver>${mysql.driver}</jdbc.driver>
        <dba.url>${mysql.dba.url}</dba.url>
        <jdbc.url>${mysql.url}</jdbc.url>
        <dba.username>${mysql.dba.username}</dba.username>
        <dba.password>${mysql.dba.password}</dba.password>
      </properties>
    </profile>
    <profile>
      <id>oracle</id>
      <properties>
        <db.vendor>oracle</db.vendor>
        <jdbc.driver>${oracle.driver}</jdbc.driver>
        <dba.url>${oracle.dba.url}</dba.url>
        <jdbc.url>${oracle.url}</jdbc.url>
        <dba.username>${oracle.dba.username}</dba.username>
        <dba.password>${oracle.dba.password}</dba.password>
      </properties>
    </profile>
    <profile>
      <id>h2</id>
      <properties>
        <db.vendor>h2</db.vendor>
        <jdbc.driver>${h2.driver}</jdbc.driver>
        <dba.url>${h2.dba.url}</dba.url>
        <jdbc.url>${h2.url}</jdbc.url>
        <dba.username>${sql.username}</dba.username>
        <dba.password>${sql.password}</dba.password>
        <dba.drop>classpath:org/kuali/sql/h2/validate.sql</dba.drop>
        <dba.create>classpath:org/kuali/sql/h2/validate.sql</dba.create>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
