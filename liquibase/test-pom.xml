<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <properties>
    <sql.database>LIQUIBASE</sql.database>
    <sql.username>${sql.database}</sql.username>
    <sql.password>${sql.database}</sql.password>
    <db.phase>process-resources</db.phase>
    <oracle.phase>${db.phase}</oracle.phase>
    <mysql.phase>${db.phase}</mysql.phase>
    <derby.phase>${db.phase}</derby.phase>
    <h2.phase>${db.phase}</h2.phase>

    <oracle.driver>oracle.jdbc.driver.OracleDriver</oracle.driver>
    <oracle.url>jdbc:oracle:thin:@deploy.rice.kuali.org:1521:KS</oracle.url>
    <oracle.dba.url>${oracle.url}</oracle.dba.url>
    <oracle.version>10.2.0.3.0</oracle.version>

    <mysql.driver>com.mysql.jdbc.Driver</mysql.driver>
    <mysql.dba.url>jdbc:mysql://localhost</mysql.dba.url>
    <mysql.url>${mysql.dba.url}/${sql.database}</mysql.url>
    <mysql.version>5.1.13</mysql.version>

    <derby.driver>org.apache.derby.jdbc.EmbeddedDriver</derby.driver>
    <derby.dba.url>${derby.url};create=true</derby.dba.url>
    <derby.url>jdbc:derby:memory:${sql.database}</derby.url>
    <derby.version>10.8.1.2</derby.version>

    <h2.driver>org.h2.Driver</h2.driver>
    <h2.dba.url>${h2.url}</h2.dba.url>
    <h2.url>jdbc:h2:mem:${sql.database};DB_CLOSE_DELAY=-1</h2.url>
    <h2.version>1.3.158</h2.version>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>1.0-alpha-3-SNAPSHOT</version>
          <executions>
            <execution>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <urls>
                  <url>classpath:org/kuali/sql/sql.properties</url>
                </urls>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>1.0.2-SNAPSHOT</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
          <configuration>
            <forceMojoExecution>true</forceMojoExecution>
            <delimiter>/</delimiter>
            <delimiterType>row</delimiterType>
            <enableFiltering>true</enableFiltering>
          </configuration>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>${oracle.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${oracle.driver}</driver>
                <url>${oracle.dba.url}</url>
                <username>system</username>
                <password>gw570229</password>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/oracle/drop.sql</resourceLocation>
                  <resourceLocation>classpath:org/kuali/sql/oracle/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>${mysql.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${mysql.driver}</driver>
                <url>${mysql.dba.url}</url>
                <username>root</username>
                <password>gw570229</password>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/mysql/drop.sql</resourceLocation>
                  <resourceLocation>classpath:org/kuali/sql/mysql/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>${derby.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${derby.driver}</driver>
                <url>${derby.dba.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/derby/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
            <execution>
              <id>h2</id>
              <phase>${h2.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${h2.driver}</driver>
                <url>${h2.dba.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/h2/validate.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.h2database</groupId>
              <artifactId>h2</artifactId>
              <version>${h2.version}</version>
            </dependency>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>${derby.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>${mysql.version}</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>1.0.2-SNAPSHOT</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.4-SNAPSHOT</version>
          <configuration>
            <changeLogFile>${project.basedir}/src/test/resources/simple.xml</changeLogFile>
            <defaultSchemaName>${sql.database}</defaultSchemaName>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
          </configuration>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>${oracle.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-oracle.sql</migrationSqlOutputFile>
                <url>${oracle.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>${mysql.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-mysql.sql</migrationSqlOutputFile>
                <url>${mysql.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>${derby.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-derby.sql</migrationSqlOutputFile>
                <url>${derby.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>h2</id>
              <phase>${h2.phase}</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-h2.sql</migrationSqlOutputFile>
                <url>${h2.url}</url>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.h2database</groupId>
              <artifactId>h2</artifactId>
              <version>${h2.version}</version>
            </dependency>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>${derby.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>${mysql.version}</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.db.liquibase</groupId>
              <artifactId>liquibase-ext</artifactId>
              <version>2.0.4-SNAPSHOT</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
