<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <properties>
    <db.name>LB</db.name>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
        </plugin>
        <plugin>
          <groupId>org.kuali.db.liquibase</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.3-SNAPSHOT</version>
          <configuration>
            <changeLogFile>simple.xml</changeLogFile>
            <defaultSchemaName>${db.name}</defaultSchemaName>
            <username>${db.name}</username>
            <password>${db.name}</password>
            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
            <dropFirst>true</dropFirst>
            <logging>info</logging>
          </configuration>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-oracle.sql</migrationSqlOutputFile>
                <driver>oracle.jdbc.driver.OracleDriver</driver>
                <url>jdbc:oracle:thin:@localhost:1521:XE</url>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-mysql.sql</migrationSqlOutputFile>
                <driver>com.mysql.jdbc.Driver</driver>
                <url>jdbc:mysql://localhost/${db.name}</url>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.db.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
