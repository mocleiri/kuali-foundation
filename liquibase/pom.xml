<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <properties>
    <sql.database>LIQUIBASE</sql.database>
    <sql.username>${sql.database}</sql.username>
    <sql.password>${sql.database}</sql.password>
    <oracle.driver>oracle.jdbc.driver.OracleDriver</oracle.driver>
    <oracle.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.url>
    <oracle.dba.url>${oracle.url}</oracle.dba.url>
    <mysql.driver>com.mysql.jdbc.Driver</mysql.driver>
    <mysql.dba.url>jdbc:mysql://localhost</mysql.dba.url>
    <mysql.url>${mysql.dba.url}/${sql.database}</mysql.url>
    <derby.driver>org.apache.derby.jdbc.EmbeddedDriver</derby.driver>
    <derby.dba.url>${derby.url};create=true</derby.dba.url>
    <derby.url>jdbc:derby:${project.build.directory}/derby/${sql.database}</derby.url>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>1.0-alpha-3-SNAPSHOT</version>
          <executions>
            <execution>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <urls>
                  <url>classpath:org/kuali/sql/sql.properties</url>
                </urls>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>1.0.2-SNAPSHOT</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${oracle.driver}</driver>
                <url>${oracle.dba.url}</url>
                <username>system</username>
                <password>gw570229</password>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/oracle/dba/drop.sql</resourceLocation>
                  <resourceLocation>classpath:org/kuali/sql/oracle/dba/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${mysql.driver}</driver>
                <url>${mysql.dba.url}</url>
                <username>root</username>
                <password>gw570229</password>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/mysql/dba/drop.sql</resourceLocation>
                  <resourceLocation>classpath:org/kuali/sql/mysql/dba/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${derby.driver}</driver>
                <url>${derby.dba.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <username>root</username>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <resourceLocations>
                  <resourceLocation>classpath:org/kuali/sql/derby/validate.sql</resourceLocation>
                  <resourceLocation>classpath:org/kuali/sql/derby/dba/create.sql</resourceLocation>
                </resourceLocations>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>10.8.1.2</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>1.0.2-SNAPSHOT</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.db.liquibase</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.3-SNAPSHOT</version>
          <configuration>
            <changeLogFile>${project.basedir}/src/test/resources/simple.xml</changeLogFile>
            <defaultSchemaName>${sql.database}</defaultSchemaName>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
          </configuration>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-oracle.sql</migrationSqlOutputFile>
                <driver>${oracle.driver}</driver>
                <url>${oracle.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-mysql.sql</migrationSqlOutputFile>
                <driver>${mysql.driver}</driver>
                <url>${mysql.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <changeLogFile>${project.basedir}/src/test/resources/derby.xml</changeLogFile>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-derby.sql</migrationSqlOutputFile>
                <driver>${derby.driver}</driver>
                <url>${derby.url}</url>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>10.8.1.2</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.db.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
