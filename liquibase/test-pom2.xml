<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <properties>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.db.liquibase</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.4-SNAPSHOT</version>
          <configuration>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
          </configuration>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-oracle.sql</migrationSqlOutputFile>
                <driver>${oracle.driver}</driver>
                <url>${oracle.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-mysql.sql</migrationSqlOutputFile>
                <driver>${mysql.driver}</driver>
                <url>${mysql.url}</url>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>process-resources</phase>
              <goals>
                <goal>updateSQL</goal>
                <goal>update</goal>
              </goals>
              <configuration>
                <migrationSqlOutputFile>${project.build.directory}/liquibase/migrate-derby.sql</migrationSqlOutputFile>
                <driver>${derby.driver}</driver>
                <url>${derby.dba.url}</url>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>10.8.1.2</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.db.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
