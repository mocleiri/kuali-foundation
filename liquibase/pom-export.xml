<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.liquibase</groupId>
  <artifactId>liquibase-test</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Liquibase POC Testing</name>
  <description>This pom demonstrates using Liquibase for exporting Kuali databases to change log XML files.</description>
  <properties>
    <db.vendor>oracle</db.vendor>
    <sql.username>RICE</sql.username>
    <sql.password>RICE</sql.password>
    <oracle.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.url>
    <mysql.url>jdbc:mysql://localhost/${sql.username}</mysql.url>
    <oracle.version>10.2.0.3.0</oracle.version>
    <mysql.version>5.1.13</mysql.version>
    <liquibase.changeLogDir>${project.build.directory}/${db.vendor}/${kuali.app}-${app.version}</liquibase.changeLogDir>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>2.0.4-SNAPSHOT</version>
          <configuration>
            <url>${jdbc.url}</url>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
          </configuration>
          <dependencies>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>${mysql.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>${oracle.version}</version>
            </dependency>
          </dependencies>
          <executions>
            <execution>
              <id>schema</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>tables, columns</types>
                <changeLogFile>${liquibase.changeLogDir}/xml/schema.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>data</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>data</types>
                <changeLogFile>${liquibase.changeLogDir}/xml/data.xml</changeLogFile>
                <dataDir>${liquibase.changeLogDir}/xml/data</dataDir>
              </configuration>
            </execution>
            <execution>
              <id>constraints</id>
              <phase>process-resources</phase>
              <goals>
                <goal>generateChangeLog</goal>
              </goals>
              <configuration>
                <types>views, primaryKeys, uniqueConstraints, indexes, foreignKeys, sequences</types>
                <changeLogFile>${liquibase.changeLogDir}/xml/constraints.xml</changeLogFile>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>mysql</id>
      <properties>
        <db.vendor>mysql</db.vendor>
        <jdbc.url>${mysql.url}</jdbc.url>
      </properties>
    </profile>
    <profile>
      <id>oracle</id>
      <properties>
        <db.vendor>oracle</db.vendor>
        <jdbc.url>${oracle.url}</jdbc.url>
      </properties>
    </profile>
    <profile>
      <id>student</id>
      <properties>
        <kuali.app>student</kuali.app>
        <app.version>1.3-build-112</app.version>
        <sql.username>KSEMBEDDED</sql.username>
        <sql.password>KSEMBEDDED</sql.password>
      </properties>
    </profile>
    <profile>
      <id>rice</id>
      <properties>
        <kuali.app>rice</kuali.app>
        <app.version>2.0.0-m7</app.version>
        <sql.username>RICE</sql.username>
        <sql.password>RICE</sql.password>
      </properties>
    </profile>
  </profiles>
</project>
