<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.3.5</version>
  </parent>
  <groupId>${project.groupId}</groupId>
  <artifactId>${project.artifactId}</artifactId>
  <version>1.1.0-test-SNAPSHOT</version>
  <name>Maven EC2 Plugin Test POM</name>
  <properties>
    <tomcat.version>6</tomcat.version>
    <deploy.env>4</deploy.env>
    <deploy.dns>env${deploy.env}.rice</deploy.dns>
    <deploy.groupId>org.kuali.rice</deploy.groupId>
    <deploy.artifactId>rice-sampleapp</deploy.artifactId>
    <deploy.version>2.1.0-build-483</deploy.version>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>properties</id>
              <goals>
                <goal>read-project-properties</goal>
                <goal>decryptall</goal>
              </goals>
              <phase>test</phase>
              <configuration>
                <password>${kuali.enc.password}</password>
                <locations>
                  <param>classpath:org/kuali/common/deploy/common.properties</param>
                  <param>classpath:org/kuali/rice/common.properties</param>
                </locations>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.common</groupId>
              <artifactId>kuali-deploy</artifactId>
              <version>${kuali-deploy.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-http-plugin</artifactId>
          <version>1.0.5</version>
          <executions>
            <execution>
              <id>http</id>
              <phase>test</phase>
              <goals>
                <goal>wait</goal>
              </goals>
              <configuration>
                <url>http://${ec2.instance.dns}/tomcat/logs/env.jsp</url>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>${project.groupId}</groupId>
          <artifactId>${project.artifactId}</artifactId>
          <version>${project.version}</version>
          <configuration>
            <securityGroups>
              <param>${ec2.securityGroup}</param>
            </securityGroups>
            <userDataFile>classpath:ec2/user-data-script</userDataFile>
            <filterUserData>true</filterUserData>
            <tags>
              <tag>
                <key>Name</key>
                <value>env${deploy.env}-test</value>
              </tag>
            </tags>
          </configuration>
          <executions>
            <execution>
              <id>launchinstance</id>
              <phase>test</phase>
              <goals>
                <goal>launchinstance</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.common</groupId>
              <artifactId>kuali-ec2</artifactId>
              <version>1.0.2</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-dnsme-plugin</artifactId>
          <version>1.0.5</version>
          <executions>
            <execution>
              <id>delete</id>
              <phase>test</phase>
              <goals>
                <goal>deleterecord</goal>
              </goals>
              <configuration>
                <recordName>${deploy.dns}</recordName>
              </configuration>
            </execution>
            <execution>
              <id>add</id>
              <phase>test</phase>
              <goals>
                <goal>addrecord</goal>
              </goals>
              <configuration>
                <recordName>${deploy.dns}</recordName>
                <recordValue>${ec2.instance.dns}.</recordValue>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>${project.groupId}</groupId>
        <artifactId>${project.artifactId}</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>maven-dnsme-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
