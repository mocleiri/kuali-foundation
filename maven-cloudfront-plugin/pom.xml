<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-maven</artifactId>
    <version>3.4.7</version>
  </parent>
  <groupId>org.kuali.maven.plugins</groupId>
  <artifactId>maven-cloudfront-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <version>1.1.6-SNAPSHOT</version>
  <name>Maven Cloud Front Plugin</name>
  <description>This plugin integrates maven site generation with Amazon Cloud Front</description>
  <url>http://${kuali.site.hostname}/maven/plugins/${project.artifactId}/${project.version}/</url>
  <properties>
    <!-- Updating this to 1.3.22 broke the S3 directory listing -->
    <aws.version>1.7.5</aws.version>
    <joda-time.version>2.3</joda-time.version>
  </properties>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <email>jcaddel@kuali.org</email>
      <organization>rSmart</organization>
      <timezone>-7</timezone>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>org.kuali.maven.common</groupId>
      <artifactId>maven-kuali-common</artifactId>
      <version>1.3.0</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-threads</artifactId>
      <version>1.0.9</version>
    </dependency>
    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>aws-java-sdk</artifactId>
      <version>${aws.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>commons-digester</groupId>
      <artifactId>commons-digester</artifactId>
      <version>1.8</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>1.7.0</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <scm>
    <connection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/maven-cloudfront-plugin</connection>
    <developerConnection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/maven-cloudfront-plugin</developerConnection>
    <url>http://svn.kuali.org/repos/foundation/trunk/maven-cloudfront-plugin</url>
  </scm>
</project>