<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>3.4.4</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-devops</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>DevOps Tooling</name>
  <description>DevOps related tooling</description>
  <url>http://${kuali.site.hostname}/common/${project.artifactId}/${project.version}</url>
  <scm>
    <connection>scm:${project.scm.vendor}:https://svn.kuali.org/repos/foundation/trunk/kuali-devops</connection>
    <developerConnection>scm:${project.scm.vendor}:https://svn.kuali.org/repos/foundation/trunk/kuali-devops</developerConnection>
    <url>https://svn.kuali.org/repos/foundation/trunk/kuali-devops</url>
  </scm>
  <properties>
    <kuali-httpclient.version>1.0.0</kuali-httpclient.version>
    <kuali-dns.version>1.0.0</kuali-dns.version>
    <kuali-aws.version>1.0.0</kuali-aws.version>
    <plugin.wagon.version>1.0.5</plugin.wagon.version>

    <junit.version>4.11</junit.version>
    <hibernate-validator.version>5.0.1.Final</hibernate-validator.version>
    <javax.el.version>2.2.4</javax.el.version>
    <javax.el-api.version>${javax.el.version}</javax.el-api.version>
    <jsr305.version>2.0.3</jsr305.version>
    <jackson.version>2.3.1</jackson.version>
    <jackson-databind.version>${jackson.version}</jackson-databind.version>
    <jackson-datatype-guava.version>${jackson.version}</jackson-datatype-guava.version>

    <wagon.phase>validate</wagon.phase>
    <wagon.internal.phase>${wagon.phase}</wagon.internal.phase>
    <wagon.external.phase>${wagon.phase}</wagon.external.phase>
  </properties>
  <profiles>
    <profile>
      <id>update</id>
      <properties>
        <wagon.rice.excludes>**/maven-metadata.xml,**/rice-dist*/**,**/*-javadoc.*,**/*.asc*,**/*.sha1*,**/*.md5*,**/*sources.jar,**/*.wsdl,org/kuali/rice/**/0.*/**,org/kuali/rice/**/1.*/**,org/kuali/rice/**/2.0.*/**,org/kuali/rice/**/2.1.*/**,org/kuali/rice/**/*jneal*/**,**/*-tests.jar,**/rice-archetype*/**,**/rice-checkstyle*/**,**/rice-config/**</wagon.rice.excludes>
        <wagon.default.excludes>**/maven-metadata.xml,**/*-javadoc.*,**/*.asc*,**/*.sha1*,**/*.md5*</wagon.default.excludes>
        <wagon.toDir>/root/.m2/repository</wagon.toDir>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.kuali.maven.plugins</groupId>
              <artifactId>wagon-maven-plugin</artifactId>
              <version>${plugin.wagon.version}</version>
              <configuration>
                <serverId>kuali.release</serverId>
                <skipExisting>true</skipExisting>
                <toDir>${wagon.toDir}</toDir>
              </configuration>
              <executions>
                <execution>
                  <id>release</id>
                  <phase>${wagon.internal.phase}</phase>
                  <goals>
                    <goal>download</goal>
                  </goals>
                  <configuration>
                    <url>s3://maven.kuali.org/release</url>
                    <includes>org/kuali/rice/**,org/kuali/common/**,org/kuali/commons/**,org/kuali/pom/**,org/kuali/maven/**,org/kuali/db/**,org/kuali/kuali-common/**,org/kuali/kuali/**</includes>
                    <excludes>${wagon.rice.excludes}</excludes>
                  </configuration>
                </execution>
                <execution>
                  <id>external</id>
                  <phase>${wagon.external.phase}</phase>
                  <goals>
                    <goal>download</goal>
                  </goals>
                  <configuration>
                    <url>s3://maven.kuali.org/external</url>
                    <includes>org/kuali/**</includes>
                    <excludes>${wagon.default.excludes}</excludes>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>wagon-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <excludes>
          <exclude>**/*.gpg</exclude>
          <!-- server.xml has ${user.home} in it -->
          <exclude>**/conf/server.xml</exclude>
          <exclude>**/rice.keystore</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <includes>
          <!-- server.xml has ${user.home} in it -->
          <include>**/conf/server.xml</include>
          <include>**/*.gpg</include>
          <include>**/rice.keystore</include>
        </includes>
      </resource>
    </resources>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>${jackson-databind.version}</version>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.datatype</groupId>
      <artifactId>jackson-datatype-guava</artifactId>
      <version>${jackson-datatype-guava.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-aws</artifactId>
      <version>${kuali-aws.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-dns</artifactId>
      <version>${kuali-dns.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-util</artifactId>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-util</artifactId>
      <version>${kuali-util.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-httpclient</artifactId>
      <version>${kuali-httpclient.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${jsr305.version}</version>
      <optional>true</optional>
    </dependency>
  </dependencies>
</project>
