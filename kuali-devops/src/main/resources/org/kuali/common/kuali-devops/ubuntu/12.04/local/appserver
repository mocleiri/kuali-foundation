function check_args {
  check_not_blank DOMAIN $DOMAIN
  check_not_blank SUBDOMAIN $SUBDOMAIN
}

MY_DIR="$( cd "$( dirname "$0" )" && pwd )"
ME=$(basename $0)
source $MY_DIR/../common/functions.sh

usage() { echo "Usage: $ME [-h] [-q] [--help] [--quiet] [--domain=kuali.org] subdomain" 1>&2; exit 1; }

DOMAIN=kuali.org

ARGS=$(getopt --options hq --longoptions "help,quiet,domain:" --name "$ME" -- "$@");
if [ $? -ne 0 ]; then usage; fi
eval set -- "$ARGS";
while true; do
  case "$1" in
    -h|--help)
      usage;
      shift;
      ;;
    -q|--quiet)
      QUIET="true";
      shift;
      ;;
    --domain)
      shift;
      DOMAIN="$1";
      shift;
      ;;
    --)
      shift;
      break;
      ;;
  esac
done

SUBDOMAIN=$1

check_args
