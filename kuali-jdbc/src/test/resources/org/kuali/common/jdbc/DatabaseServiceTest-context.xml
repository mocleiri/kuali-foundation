<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

  <bean id="encoding" class="java.lang.String">
    <constructor-arg value="UTF-8" />
  </bean>

  <util:list id="pathProperties" value-type="java.lang.String">
    <value>project.groupId</value>
    <value>deploy.groupId</value>
  </util:list>

  <util:list id="versionProperties" value-type="java.lang.String">
    <value>project.version</value>
    <value>deploy.version</value>
  </util:list>

  <bean id="properties" class="org.kuali.common.util.spring.PropertyFactoryBean">
    <property name="encryptionMode" value="DECRYPT" />
    <property name="encryptionPassword" value="${kuali.enc.password}" />
    <property name="pathProperties" ref="pathProperties" />
    <property name="versionProperties" ref="versionProperties" />
    <property name="encoding" ref="encoding" />
    <property name="resolvePlaceholders" value="true" />
    <property name="locations">
      <list>
        <value>classpath:maven.properties</value>
        <value>classpath:org/kuali/common/deploy/common.properties</value>
        <value>classpath:${deploy.groupId.path}/common.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.version.major}.${deploy.version.minor}.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.artifactId}.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.artifactId}-${deploy.version.major}.${deploy.version.minor}.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.artifactId}-${deploy.version.major}.${deploy.version.minor}.${deploy.version.incremental}.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.artifactId}-${deploy.version.trimmed}.properties</value>
        <value>classpath:${deploy.groupId.path}/${deploy.env.name}.properties</value>
        <value>classpath:org/kuali/common/deploy/${db.vendor}.properties</value>
        <value>classpath:org/kuali/common/sql/sql.properties</value>
        <value>classpath:org/kuali/common/sql/${db.vendor}.xml</value>
      </list>
    </property>
  </bean>

  <util:list id="dbaSql">
    <value>${sql.validate}</value>
    <value>${sql.dba.drop}</value>
    <value>${sql.dba.create}</value>
  </util:list>

  <context:property-placeholder properties-ref="properties" system-properties-mode="NEVER" />

  <bean id="dbpc" class="org.kuali.common.jdbc.context.DatabaseProcessContext">
    <property name="vendor" value="${db.vendor}" />
    <property name="driver" value="${jdbc.driver}" />
    <property name="url" value="${jdbc.url}" />
    <property name="username" value="${jdbc.username}" />
    <property name="password" value="${jdbc.password}" />
    <property name="dbaUrl" value="${jdbc.dba.url}" />
    <property name="dbaUsername" value="${jdbc.dba.username}" />
    <property name="dbaPassword" value="${jdbc.dba.password}" />
  </bean>

  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="#{dbpc.driver}" />
    <property name="url" value="#{dbpc.url}" />
    <property name="username" value="#{dbpc.username}" />
    <property name="password" value="#{dbpc.password}" />
  </bean>

  <bean id="dbaDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="#{dbpc.driver}" />
    <property name="url" value="#{dbpc.dbaUrl}" />
    <property name="username" value="#{dbpc.dbaUsername}" />
    <property name="password" value="#{dbpc.dbaPassword}" />
  </bean>

  <bean id="dbaJdbcContext" class="org.kuali.common.jdbc.context.JdbcContext">
    <property name="dataSource" ref="dbaDataSource" />
  </bean>

  <bean id="normalJdbcContext" class="org.kuali.common.jdbc.context.JdbcContext">
    <property name="dataSource" ref="dataSource" />
  </bean>

  <bean id="context" class="org.kuali.common.jdbc.context.DatabaseResetContext">
    <property name="normalJdbcContext" ref="normalJdbcContext" />
    <property name="dbaJdbcContext" ref="dbaJdbcContext" />
    <property name="databaseProcessContext" ref="dbpc" />
    <property name="dbaSql" ref="dbaSql" />
    <property name="properties" ref="properties" />
    <property name="encoding" ref="encoding" />
  </bean>

  <bean id="service" class="org.kuali.common.jdbc.DefaultDatabaseService" />

</beans>
