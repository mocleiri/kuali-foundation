<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <name>Kuali Test SQL</name>
  <description>POM for invoking the sql-maven-plugin to test SQL</description>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.sql</groupId>
  <artifactId>sql-test</artifactId>
  <version>1.0-SNAPSHOT</version>
  <properties>
    <sql.database>TEST_DB</sql.database>
    <sql.username>${sql.database}</sql.username>
    <sql.password>${sql.database}</sql.password>
    <oracle.driver>oracle.jdbc.driver.OracleDriver</oracle.driver>
    <oracle.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.url>
    <oracle.dba.url>${oracle.url}</oracle.dba.url>
    <mysql.driver>com.mysql.jdbc.Driver</mysql.driver>
    <mysql.dba.url>jdbc:mysql://localhost</mysql.dba.url>
    <mysql.url>${mysql.dba.url}/${sql.database}</mysql.url>
    <derby.driver>org.apache.derby.jdbc.EmbeddedDriver</derby.driver>
    <derby.dba.url>jdbc:derby:${project.build.directory}/${sql.database};create=true</derby.dba.url>
    <derby.url>jdbc:derby:${sql.database}</derby.url>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>1.0-alpha-3-SNAPSHOT</version>
          <executions>
            <execution>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <files>
                  <file>../../main/resources/org/kuali/sql/sql.properties</file>
                </files>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
          <executions>
            <execution>
              <id>oracle</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${oracle.driver}</driver>
                <url>${oracle.dba.url}</url>
                <username>system</username>
                <password>gw570229</password>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <srcFiles>
                  <srcFile>../../main/resources/org/kuali/sql/oracle/dba/drop.sql</srcFile>
                  <srcFile>../../main/resources/org/kuali/sql/oracle/dba/create.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${mysql.driver}</driver>
                <url>${mysql.dba.url}</url>
                <username>root</username>
                <password>gw570229</password>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <srcFiles>
                  <srcFile>../../main/resources/org/kuali/sql/mysql/dba/drop.sql</srcFile>
                  <srcFile>../../main/resources/org/kuali/sql/mysql/dba/create.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>process-resources</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${derby.driver}</driver>
                <url>${derby.dba.url}</url>
                <username>root</username>
                <password>gw570229</password>
                <delimiter>/</delimiter>
                <delimiterType>row</delimiterType>
                <enableFiltering>true</enableFiltering>
                <srcFiles>
                  <srcFile>../../main/resources/org/kuali/sql/derby/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>10.8.1.2</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
