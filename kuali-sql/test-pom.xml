<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <name>Kuali Test SQL</name>
  <description>POM for invoking the sql-maven-plugin to test SQL</description>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>18</version>
  </parent>
  <groupId>org.kuali.db.sql</groupId>
  <artifactId>sql-test</artifactId>
  <version>1.0-SNAPSHOT</version>
  <properties>
    <sql.database>TEST</sql.database>
    <sql.username>${sql.database}</sql.username>
    <sql.password>${sql.database}</sql.password>

    <db.phase>process-resources</db.phase>
    <oracle.phase>${db.phase}</oracle.phase>
    <mysql.phase>${db.phase}</mysql.phase>
    <derby.phase>${db.phase}</derby.phase>
    <h2.phase>${db.phase}</h2.phase>

    <oracle.driver>oracle.jdbc.driver.OracleDriver</oracle.driver>
    <oracle.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.url>
    <oracle.dba.url>${oracle.url}</oracle.dba.url>

    <mysql.driver>com.mysql.jdbc.Driver</mysql.driver>
    <mysql.dba.url>jdbc:mysql://localhost</mysql.dba.url>
    <mysql.url>${mysql.dba.url}/${sql.database}</mysql.url>

    <derby.driver>org.apache.derby.jdbc.EmbeddedDriver</derby.driver>
    <derby.dba.url>${derby.url};create=true</derby.dba.url>
    <derby.url>jdbc:derby:memory:${sql.database}</derby.url>
    <derby.version>10.8.1.2</derby.version>

    <h2.driver>org.h2.Driver</h2.driver>
    <h2.port>9092</h2.port>
    <h2.dir>${project.build.directory}/h2</h2.dir>
    <h2.base.url>jdbc:h2:tcp://localhost:${h2.port}/${h2.dir}/${sql.database}</h2.base.url>
    <!-- Create an H2 db, and keep it open until the JVM exits -->
    <h2.dba.url>${h2.base.url};DB_CLOSE_DELAY=-1</h2.dba.url>
    <!-- Only connect if the db already exists -->
    <h2.url>${h2.base.url};IFEXISTS=true</h2.url>
    <h2.version>1.3.158</h2.version>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.2</version>
          <executions>
            <execution>
              <id>start-h2-embedded-server</id>
              <phase>initialize</phase>
              <goals>
                <goal>java</goal>
              </goals>
              <configuration>
                <mainClass>org.h2.tools.Server</mainClass>
                <arguments>
                  <argument>-tcp</argument>
                  <argument>-tcpDaemon</argument>
                  <argument>-tcpPort</argument>
                  <argument>${h2.port}</argument>
                  <argument>-baseDir</argument>
                  <argument>${h2.dir}</argument>
                </arguments>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>1.0-alpha-3-SNAPSHOT</version>
          <executions>
            <execution>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <files>
                  <file>src/main/resources/org/kuali/sql/sql.properties</file>
                </files>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>sql-maven-plugin</artifactId>
          <version>1.6</version>
          <configuration>
            <username>${sql.username}</username>
            <password>${sql.password}</password>
            <delimiter>/</delimiter>
            <delimiterType>row</delimiterType>
            <enableFiltering>true</enableFiltering>
          </configuration>
          <executions>
            <execution>
              <id>oracle-dba</id>
              <phase>${oracle.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${oracle.driver}</driver>
                <url>${oracle.dba.url}</url>
                <username>system</username>
                <password>gw570229</password>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/oracle/drop.sql</srcFile>
                  <srcFile>src/main/resources/org/kuali/sql/oracle/create.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>mysql-dba</id>
              <phase>${mysql.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${mysql.driver}</driver>
                <url>${mysql.dba.url}</url>
                <username>root</username>
                <password>gw570229</password>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/mysql/drop.sql</srcFile>
                  <srcFile>src/main/resources/org/kuali/sql/mysql/create.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>derby-dba</id>
              <phase>${derby.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${derby.driver}</driver>
                <url>${derby.dba.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/derby/create.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>h2-dba</id>
              <phase>${h2.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${h2.driver}</driver>
                <url>${h2.dba.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/h2/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>oracle</id>
              <phase>${oracle.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${oracle.driver}</driver>
                <url>${oracle.url}</url>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/oracle/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>${mysql.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${mysql.driver}</driver>
                <url>${mysql.url}</url>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/mysql/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>derby</id>
              <phase>${derby.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${derby.driver}</driver>
                <url>${derby.url}</url>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/derby/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
            <execution>
              <id>h2</id>
              <phase>${h2.phase}</phase>
              <goals>
                <goal>execute</goal>
              </goals>
              <configuration>
                <driver>${h2.driver}</driver>
                <url>${h2.url}</url>
                <enableAnonymousPassword>true</enableAnonymousPassword>
                <srcFiles>
                  <srcFile>src/main/resources/org/kuali/sql/h2/validate.sql</srcFile>
                </srcFiles>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.derby</groupId>
              <artifactId>derby</artifactId>
              <version>${derby.version}</version>
            </dependency>
            <dependency>
              <groupId>com.oracle</groupId>
              <artifactId>ojdbc14</artifactId>
              <version>10.2.0.3.0</version>
            </dependency>
            <dependency>
              <groupId>mysql</groupId>
              <artifactId>mysql-connector-java</artifactId>
              <version>5.1.13</version>
            </dependency>
            <dependency>
              <groupId>com.h2database</groupId>
              <artifactId>h2</artifactId>
              <version>1.3.158</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>sql-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.3.158</version>
    </dependency>
  </dependencies>
</project>
