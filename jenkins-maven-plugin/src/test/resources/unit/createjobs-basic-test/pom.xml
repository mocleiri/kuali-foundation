<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.0.6</version>
  </parent>
  <groupId>org.kuali.maven.plugins</groupId>
  <artifactId>jenkins-maven-plugin</artifactId>
  <version>1.X</version>
  <name>Jenkins Maven Plugin Test POM</name>
  <properties>
    <jenkins.phase>process-resources</jenkins.phase>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
         <groupId>org.kuali.maven.plugins</groupId>
         <artifactId>jenkins-maven-plugin</artifactId>
  		 <version>1.2.0-SNAPSHOT</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>${project.groupId}</groupId>
        <artifactId>jenkins-maven-plugin</artifactId>
        <version>${project.version}</version>
        <configuration>
        </configuration>
        <executions>
          <!-- demonstrates running a single cli command -->
          <execution>
            <id>cli-default</id>
            <phase>${jenkins.phase}</phase>
            <goals>
              <goal>cli</goal>
            </goals>
          </execution>
          <!-- demonstrates running multiple cli commands in a single Maven execution -->
          <execution>
            <id>cli-multiple-commands</id>
            <phase>${jenkins.phase}</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <commands>
                <command>
                  <args>
                    <arg>version</arg>
                  </args>
                </command>
              </commands>
            </configuration>
          </execution>
          <execution>
            <id>cli-groovy</id>
            <phase>${jenkins.phase}</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <commands>
                <!-- demonstrates executing groovy code contained in a file -->
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>helloworld.groovy</arg>
                  </args>
                </command>
                <!-- demonstrates executing groovy code contained in a url -->
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>file://${project.basedir}/src/test/resources/helloworld-url.groovy</arg>
                  </args>
                </command>
                <!-- demonstrates providing text to the stdin of Jenkins CLI -->
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>=</arg>
                  </args>
                  <stdin>println "hello world from stdin"</stdin>
                </command>
                <!-- demonstrates providing the contents of a url as input to the stdin of Jenkins CLI -->
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>=</arg>
                  </args>
                  <stdinUrl>classpath:helloworld-stdinUrl.groovy</stdinUrl>
                </command>
              </commands>
            </configuration>
          </execution>
          <!-- demonstrates configuring a jenkins server to connect to -->
          <execution>
            <id>cli-provide-ci-url</id>
            <phase>${jenkins.phase}</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <url>http://ci.rice.kuali.org</url>
              <commands>
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>helloworld.groovy</arg>
                  </args>
                </command>
              </commands>
              <failOnError>false</failOnError>
            </configuration>
          </execution>
          <execution>
            <id>cli-jobs</id>
            <phase>${jenkins.phase}</phase>
            <goals>
              <goal>genjobs</goal>
              <goal>createjobs</goal>
              <goal>updatejobs</goal>
              <goal>runjob</goal>
              <goal>deletejobs</goal>
            </goals>
          </execution>
          <execution>
            <id>cli-run-job-commands</id>
            <phase>process-resources</phase>
            <goals>
              <goal>runjobs</goal>
            </goals>
            <configuration>
              <commands>
                <runJobCommand>
                  <name>publish</name>
                  <skipIfNoChanges>true</skipIfNoChanges>
                </runJobCommand>
              </commands>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>${project.artifactId}</artifactId>
            <version>${project.version}</version>
            <classifier>tests</classifier>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <scm>
    <connection>${project.scm.connection}</connection>
    <developerConnection>${project.scm.developerConnection}</developerConnection>
    <url>${project.scm.url}</url>
  </scm>
</project>
