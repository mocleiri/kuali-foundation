<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.0.6</version>
  </parent>
  <groupId>${project.groupId}</groupId>
  <artifactId>${project.artifactId}</artifactId>
  <version>1.0.1</version>
  <name>Jenkins Maven Plugin Test POM</name>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>${project.groupId}</groupId>
          <artifactId>${project.artifactId}</artifactId>
          <version>${project.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>${project.groupId}</groupId>
        <artifactId>${project.artifactId}</artifactId>
        <version>${project.version}</version>
        <executions>
          <!-- demonstrates running the simple cli command 'version' -->
          <execution>
            <id>cli-default</id>
            <phase>none</phase>
            <goals>
              <goal>cli</goal>
            </goals>
          </execution>
          <!-- demonstrates running multiple cli commands in a single Maven execution -->
          <execution>
            <id>cli-multiple-commands</id>
            <phase>none</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <commands>
                <command>
                  <args>
                    <arg>version</arg>
                  </args>
                </command>
                <command>
                  <args>
                    <arg>who-am-i</arg>
                  </args>
                </command>
              </commands>
            </configuration>
          </execution>
          <!-- demonstrates passing multiple arguments to a single command -->
          <execution>
            <id>cli-groovy-file</id>
            <phase>process-resources</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <commands>
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>helloworld.groovy</arg>
                  </args>
                </command>
              </commands>
            </configuration>
          </execution>
          <!-- demonstrates providing input to Jenkins CLI via stdin -->
          <execution>
            <id>cli-groovy-stdin</id>
            <phase>process-resources</phase>
            <goals>
              <goal>cli</goal>
            </goals>
            <configuration>
              <commands>
                <command>
                  <args>
                    <arg>groovy</arg>
                    <arg>=</arg>
                  </args>
                  <stdin>println "hello world from stdin"</stdin>
                </command>
              </commands>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <scm>
    <connection>${project.scm.connection}</connection>
    <developerConnection>${project.scm.developerConnection}</developerConnection>
    <url>${project.scm.url}</url>
  </scm>
</project>
