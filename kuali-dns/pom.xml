<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>3.3.29</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-dns</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>DNS Plugin</name>
  <description>This project provides Kuali specific configuration for the maven-dnsme-plugin</description>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <email>jcaddel@kuali.org</email>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-7</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:${project.scm.vendor}:${project.scm.url}</connection>
    <developerConnection>scm:${project.scm.vendor}:${project.scm.url}</developerConnection>
    <url>${project.scm.url}</url>
  </scm>
  <properties>
    <project.scm.url>https://svn.kuali.org/repos/foundation/trunk/kuali-dns</project.scm.url>
    <dnsme.recordType>CNAME</dnsme.recordType>
    <dnsme.ttl>60</dnsme.ttl>
    <dnsme.domainName>kuali.org</dnsme.domainName>
    <dnsme.apiKey>454f2836-81c0-4379-b8dd-2cc6495131b5</dnsme.apiKey>
    <dnsme.restApiUrl>http://api.dnsmadeeasy.com/V1.2</dnsme.restApiUrl>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <!--
            Example CLI commands:
            mvn dnsme:showrecords -Ddnsme.recordNameContains=nexus
            mvn dnsme:deleterecord -Ddnsme.recordName=nexus1
            mvn dnsme:addrecord -Ddnsme.recordName=nexus1 -Ddnsme.recordValue=ec2-107-20-15-48.compute-1.amazonaws.com
          -->
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-dnsme-plugin</artifactId>
          <version>1.0.5</version>
          <configuration>
            <apiKey>${dnsme.apiKey}</apiKey>
            <secretKey>${dnsme.secretKey}</secretKey>
            <ttl>${dnsme.ttl}</ttl>
            <restApiUrl>${dnsme.restApiUrl}</restApiUrl>
            <domainName>${dnsme.domainName}</domainName>
            <recordType>${dnsme.recordType}</recordType>
            <!--
              Automatically append a dot here since we are almost always adding a fully qualified DNS name
              Without the dot, DNSME adds 'kuali.org' as a suffix to whatever value we provide
            -->
            <recordValue>${dnsme.recordValue}.</recordValue>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <profiles>
    <profile>
      <id>arec</id>
      <properties>
        <dnsme.recordType>A</dnsme.recordType>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.kuali.maven.plugins</groupId>
              <artifactId>maven-dnsme-plugin</artifactId>
              <version>1.0.5</version>
              <configuration>
                <apiKey>${dnsme.apiKey}</apiKey>
                <secretKey>${dnsme.secretKey}</secretKey>
                <ttl>${dnsme.ttl}</ttl>
                <restApiUrl>${dnsme.restApiUrl}</restApiUrl>
                <domainName>${dnsme.domainName}</domainName>
                <recordType>${dnsme.recordType}</recordType>
                <recordValue>${dnsme.recordValue}</recordValue>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>
</project>
