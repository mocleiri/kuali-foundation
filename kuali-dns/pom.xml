<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.3.5</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-dns</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>DNS Plugin</name>
  <description>This project provides Kuali specific configuration for the maven-dnsme-plugin</description>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <email>jcaddel@kuali.org</email>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-7</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:svn:https://svn.kuali.org/repos/foundation/trunk/kuali-dns</connection>
    <developerConnection>scm:svn:https://svn.kuali.org/repos/foundation/trunk/kuali-dns</developerConnection>
    <url>https://svn.kuali.org/repos/foundation/trunk/kuali-dns</url>
  </scm>
  <properties>
    <dnsme.recordType>CNAME</dnsme.recordType>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <!--
            Example CLI commands:
            mvn dnsme:showrecords -Ddnsme.recordNameContains=nexus
            mvn dnsme:deleterecord -Ddnsme.recordName=nexus1
            mvn dnsme:addrecord -Ddnsme.recordName=nexus1 -Ddnsme.recordValue=ec2-107-20-15-48.compute-1.amazonaws.com
          -->
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-dnsme-plugin</artifactId>
          <version>1.0.5</version>
          <configuration>
            <apiKey>454f2836-81c0-4379-b8dd-2cc6495131b5</apiKey>
            <secretKey>${dnsme.secretKey}</secretKey>
            <ttl>60</ttl>
            <restApiUrl>http://api.dnsmadeeasy.com/V1.2</restApiUrl>
            <domainName>kuali.org</domainName>
            <recordType>${dnsme.recordType}</recordType>
            <!--
              Automatically append a dot here since we are almost always adding a fully qualified DNS name
              Without the dot, DNSME adds 'kuali.org' as a suffix to whatever value we provide
            -->
            <recordValue>${dnsme.recordValue}.</recordValue>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
