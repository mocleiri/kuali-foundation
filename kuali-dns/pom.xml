<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>3.3.33</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-dns</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>DNS Tooling</name>
  <description>DNS Tooling</description>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <email>jcaddel@kuali.org</email>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-7</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:${project.scm.vendor}:https://svn.kuali.org/repos/foundation/trunk/kuali-dns</connection>
    <developerConnection>scm:${project.scm.vendor}:https://svn.kuali.org/repos/foundation/trunk/kuali-dns</developerConnection>
    <url>https://svn.kuali.org/repos/foundation/trunk/kuali-dns</url>
  </scm>
  <properties>
    <dnsme.recordType>CNAME</dnsme.recordType>
    <dnsme.ttl>60</dnsme.ttl>
    <dnsme.domainName>kuali.org</dnsme.domainName>
    <dnsme.apiKey>454f2836-81c0-4379-b8dd-2cc6495131b5</dnsme.apiKey>
    <dnsme.secretKey>enc--iDJaxZE9rvz170KCd+EjsWsjgqtBRit8SnlpaMqlR2Qd637n4ZdNp5uC2Tp6EEd1</dnsme.secretKey>
    <dnsme.restApiUrl>http://api.dnsmadeeasy.com/V1.2</dnsme.restApiUrl>
    <gson.version>1.7.2</gson.version>
    <beanutils.version>1.8.3-kuali-4</beanutils.version>
    <httpclient.version>3.1</httpclient.version>
    <junit.version>4.11</junit.version>
    <slf4j.version>1.7.5</slf4j.version>
    <plugin.dnsme.version>1.0.7</plugin.dnsme.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <!-- Test dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-util</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>${gson.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.commons</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>${beanutils.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <!-- TODO Upgrade to httpclient. Requires a decent amount of refactoring -->
    <!--
      <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>4.1.3</version>
      </dependency>
    -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
      <version>${httpclient.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <!--
            Example CLI commands:
            mvn dnsme:showrecords -Ddnsme.recordNameContains=nexus
            mvn dnsme:deleterecord -Ddnsme.recordName=nexus1
            mvn dnsme:addrecord -Ddnsme.recordName=nexus1 -Ddnsme.recordValue=ec2-107-20-15-48.compute-1.amazonaws.com
          -->
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-dnsme-plugin</artifactId>
          <version>${plugin.dnsme.version}</version>
          <configuration>
            <apiKey>${dnsme.apiKey}</apiKey>
            <secretKey>${dnsme.secretKey}</secretKey>
            <ttl>${dnsme.ttl}</ttl>
            <restApiUrl>${dnsme.restApiUrl}</restApiUrl>
            <domainName>${dnsme.domainName}</domainName>
            <recordType>${dnsme.recordType}</recordType>
            <!--
              Automatically append a dot here since we are almost always adding a fully qualified DNS name
              Without the dot, DNSME adds 'kuali.org' as a suffix to whatever value we provide
            -->
            <recordValue>${dnsme.recordValue}.</recordValue>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <profiles>
    <profile>
      <id>arec</id>
      <properties>
        <dnsme.recordType>A</dnsme.recordType>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.kuali.maven.plugins</groupId>
              <artifactId>maven-dnsme-plugin</artifactId>
              <version>${plugin.dnsme.version}</version>
              <configuration>
                <apiKey>${dnsme.apiKey}</apiKey>
                <secretKey>${dnsme.secretKey}</secretKey>
                <ttl>${dnsme.ttl}</ttl>
                <restApiUrl>${dnsme.restApiUrl}</restApiUrl>
                <domainName>${dnsme.domainName}</domainName>
                <recordType>${dnsme.recordType}</recordType>
                <recordValue>${dnsme.recordValue}</recordValue>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>
</project>
