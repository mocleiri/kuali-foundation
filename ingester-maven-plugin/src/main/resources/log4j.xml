<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%-4p] %c - %m%n" />
    </layout>
  </appender>
  <logger name="org.kuali.maven">
    <level value="info" />
  </logger>
  <logger name="org.kuali.rice.kew.batch">
    <level value="info" />
  </logger>
  <logger name="org.kuali.rice">
    <level value="warn" />
  </logger>
  <logger name="org.kuali.rice.core.config.JAXBConfigImpl">
    <level value="warn" />
  </logger>
  <logger name="org.kuali.rice.kew.rule.service">
    <level value="warn" />
  </logger>
  <logger name="org.kuali.rice.kew.xml.StyleXmlParser">
    <level value="warn" />
  </logger>
  <logger name="org.kuali.rice.kns.util.MaintenanceUtils">
    <level value="warn" />
  </logger>
  <logger name="org.kuali.rice.kew.doctype.service">
    <level value="warn" />
  </logger>
  <logger name="org.springframework">
    <level value="warn" />
  </logger>
  <logger name="com.opensymphony">
    <level value="warn" />
  </logger>
  <logger name="org.apache.ojb">
    <level value="warn" />
  </logger>
  <root>
    <priority value="warn" />
    <appender-ref ref="console" />
  </root>
</log4j:configuration>