<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>3.3.19</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-util</artifactId>
  <version>4.4.6</version>
  <name>Kuali Util</name>
  <description>Kuali Utilities</description>
  <url>http://${kuali.site.hostname}/common/${project.artifactId}/${project.version}</url>
  <inceptionYear>2010</inceptionYear>
  <scm>
    <connection>scm:${project.scm.vendor}:${project.scm.url}/tags/kuali-util-4.4.6</connection>
    <developerConnection>scm:${project.scm.vendor}:${project.scm.url}/tags/kuali-util-4.4.6</developerConnection>
    <url>${project.scm.url}/tags/kuali-util-4.4.6</url>
  </scm>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <organization>rSmart</organization>
      <timezone>-7</timezone>
      <email>jcaddel@kuali.org</email>
    </developer>
  </developers>
  <properties>
    <kuali.release.arguments>-DskipTests -Pkuali-release</kuali.release.arguments>
    <spring.version>3.2.1.RELEASE</spring.version>
    <junit.version>4.10</junit.version>
    <slf4j.version>1.7.5</slf4j.version>
    <io.version>2.4</io.version>
    <lang.version>3.1</lang.version>
    <jasypt.version>1.9.0</jasypt.version>
    <beanutils.version>1.8.3-kuali-4</beanutils.version>
    <jsch.version>0.1.49</jsch.version>
    <plexus-utils.version>3.0.10</plexus-utils.version>
    <guava.version>14.0.1</guava.version>
    <eclipse-moxy.version>2.5.0</eclipse-moxy.version>
    <project.scm.url>https://svn.kuali.org/repos/foundation/trunk/kuali-util</project.scm.url>
  </properties>
  <profiles>
    <profile>
      <id>test</id>
      <properties>
        <project.metainf.includes>project.*</project.metainf.includes>
        <project.metainf.excludes>project.build.timestamp*</project.metainf.excludes>
        <project.metainf.skipIfExists>false</project.metainf.skipIfExists>
        <project.metainf.skipIfEqual>true</project.metainf.skipIfEqual>
      </properties>
    </profile>
  </profiles>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <compilerArgs>
              <arg>-Xlint:deprecation</arg>
            </compilerArgs>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <version>${plexus-utils.version}</version>
    </dependency>
    <dependency>
      <groupId>com.jcraft</groupId>
      <artifactId>jsch</artifactId>
      <version>${jsch.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>${lang.version}</version>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>${io.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kuali.commons</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>${beanutils.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
      <version>${spring.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
      <version>${spring.version}</version>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.jasypt</groupId>
      <artifactId>jasypt</artifactId>
      <version>${jasypt.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jasypt</groupId>
      <artifactId>jasypt-spring31</artifactId>
      <version>${jasypt.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <!-- Test dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <version>${spring.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- Only required until this bug is fixed -> https://java.net/jira/browse/JAXB-415 -->
    <!-- The JAXB reference implementation shipped with the JDK blows up if an adapter adapts a non-null bound value to null -->
    <dependency>
      <groupId>org.eclipse.persistence</groupId>
      <artifactId>org.eclipse.persistence.moxy</artifactId>
      <version>${eclipse-moxy.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>
  </dependencies>
</project>
