<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>2.3.33</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-ec2</artifactId>
  <version>1.0.8-SNAPSHOT</version>
  <name>EC2 Tooling</name>
  <description>Various tooling for for working with Amazon's Elastic Computing Cloud aka ""EC2"</description>
  <url>http://${kuali.site.hostname}/common/${project.artifactId}/${project.version}</url>
  <scm>
    <connection>scm:svn:https://svn.kuali.org/repos/foundation/trunk/kuali-ec2</connection>
    <developerConnection>scm:svn:https://svn.kuali.org/repos/foundation/trunk/kuali-ec2</developerConnection>
    <url>https://svn.kuali.org/repos/foundation/trunk/kuali-ec2</url>
  </scm>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <maven.test.skip>true</maven.test.skip>
    <!-- Plugin versions -->
    <plugin.ant.version>1.0.5</plugin.ant.version>
    <plugin.dependency.version>2.4</plugin.dependency.version>

    <environment>ec2</environment>
    <jdk.classifier>linux-x64</jdk.classifier>
    <jdk7.artifactId>jdk7</jdk7.artifactId>
    <jdk7.version>1.7.0-u21</jdk7.version>
    <jdk7.zip>target/dependency/${jdk7.artifactId}-${jdk7.version}-${jdk.classifier}.zip</jdk7.zip>
    <jdk7.dir>/usr/java/jdk7-${jdk7.version}</jdk7.dir>
    <jdk6.artifactId>jdk6</jdk6.artifactId>
    <jdk6.version>1.6.0-u43</jdk6.version>
    <jdk6.zip>target/dependency/${jdk6.artifactId}-${jdk6.version}-${jdk.classifier}.zip</jdk6.zip>
    <jdk6.dir>/usr/java/jdk6-${jdk6.version}</jdk6.dir>
    <tomcat.artifactId>apache-tomcat</tomcat.artifactId>
    <tomcat.zip>target/dependency/${tomcat.artifactId}-${tomcat.version}.zip</tomcat.zip>
    <tomcat.dir>/usr/local/${tomcat.artifactId}-${tomcat.version}</tomcat.dir>
    <ant.phase>none</ant.phase>
    <ant.file>src/main/resources/build.xml</ant.file>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>ant-maven-plugin</artifactId>
          <version>${plugin.ant.version}</version>
          <configuration>
            <file>${ant.file}</file>
            <target>${ant.target}</target>
          </configuration>
          <executions>
            <execution>
              <id>run</id>
              <phase>${ant.phase}</phase>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>ant-contrib</groupId>
              <artifactId>ant-contrib</artifactId>
              <version>1.0b3</version>
              <exclusions>
                <exclusion>
                  <groupId>ant</groupId>
                  <artifactId>ant</artifactId>
                </exclusion>
              </exclusions>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>${project.artifactId}</artifactId>
              <version>${project.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${plugin.dependency.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>ant-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>ec2</id>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
            <includes>
              <include>ec2/**/*</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>false</filtering>
            <excludes>
              <exclude>ec2/**/*</exclude>
            </excludes>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>resetall</id>
      <properties>
        <ant.target>resetall</ant.target>
        <ant.phase>process-resources</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>6</id>
      <properties>
        <tomcat.major.version>6</tomcat.major.version>
        <tomcat.version>${tomcat.major.version}.0.35</tomcat.version>
      </properties>
    </profile>
    <profile>
      <id>7</id>
      <properties>
        <tomcat.major.version>7</tomcat.major.version>
        <tomcat.version>${tomcat.major.version}.0.26</tomcat.version>
      </properties>
    </profile>
    <profile>
      <id>tomcat</id>
      <properties>
        <ant.phase>process-resources</ant.phase>
        <ant.target>installtomcat</ant.target>
        <tomcat.shutdown.port>8005</tomcat.shutdown.port>
        <tomcat.http.port>80</tomcat.http.port>
        <tomcat.https.port>443</tomcat.https.port>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>get-jdks</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>com.oracle</groupId>
                      <artifactId>${jdk7.artifactId}</artifactId>
                      <version>${jdk7.version}</version>
                      <classifier>${jdk.classifier}</classifier>
                      <type>zip</type>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.oracle</groupId>
                      <artifactId>${jdk6.artifactId}</artifactId>
                      <version>${jdk6.version}</version>
                      <classifier>${jdk.classifier}</classifier>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>get-tomcat</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.apache.tomcat</groupId>
                      <artifactId>${tomcat.artifactId}</artifactId>
                      <version>${tomcat.version}</version>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>getjdks</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>get-jdks</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>com.oracle</groupId>
                      <artifactId>${jdk7.artifactId}</artifactId>
                      <version>${jdk7.version}</version>
                      <classifier>${jdk.classifier}</classifier>
                      <type>zip</type>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.oracle</groupId>
                      <artifactId>${jdk6.artifactId}</artifactId>
                      <version>${jdk6.version}</version>
                      <classifier>${jdk.classifier}</classifier>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>medium</id>
      <properties>
        <ant.phase>process-resources</ant.phase>
        <ant.target>resetmedium</ant.target>
        <tomcat.shutdown.port>8005</tomcat.shutdown.port>
        <tomcat.http.port>8080</tomcat.http.port>
        <tomcat.https.port>8443</tomcat.https.port>
      </properties>
    </profile>
    <profile>
      <id>appdynamics</id>
      <properties>
        <appdynamics.groupId>com.appdynamics</appdynamics.groupId>
        <appdynamics.version>3.6.2</appdynamics.version>
        <appdynamics.sa.artifactId>server-agent</appdynamics.sa.artifactId>
        <appdynamics.ma.artifactId>machine-agent</appdynamics.ma.artifactId>
        <ant.phase>process-resources</ant.phase>
        <ant.target>installappdynamics</ant.target>

        <!-- Server Agent -->
        <appdynamics.sa.zip>target/dependency/${appdynamics.sa.artifactId}-${appdynamics.version}.zip</appdynamics.sa.zip>
        <appdynamics.sa.dir>/usr/local/${appdynamics.sa.artifactId}-${appdynamics.version}</appdynamics.sa.dir>
        <appdynamics.sa.symlink>/usr/local/${appdynamics.sa.artifactId}</appdynamics.sa.symlink>

        <!-- Machine Agent -->
        <appdynamics.ma.zip>target/dependency/${appdynamics.ma.artifactId}-${appdynamics.version}.zip</appdynamics.ma.zip>
        <appdynamics.ma.dir>/usr/local/${appdynamics.ma.artifactId}-${appdynamics.version}</appdynamics.ma.dir>
        <appdynamics.ma.symlink>/usr/local/${appdynamics.ma.artifactId}</appdynamics.ma.symlink>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>copy</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${appdynamics.groupId}</groupId>
                      <artifactId>${appdynamics.ma.artifactId}</artifactId>
                      <version>${appdynamics.version}</version>
                      <type>zip</type>
                    </artifactItem>
                    <artifactItem>
                      <groupId>${appdynamics.groupId}</groupId>
                      <artifactId>${appdynamics.sa.artifactId}</artifactId>
                      <version>${appdynamics.version}</version>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jenkins</id>
      <properties>
        <jenkins.groupId>org.jenkins</jenkins.groupId>
        <jenkins.artifactId>jenkins</jenkins.artifactId>
        <jenkins.version>1.440</jenkins.version>
        <jenkins.war>target/dependency/${jenkins.artifactId}-${jenkins.version}.war</jenkins.war>
        <tomcat.instance>1</tomcat.instance>
        <ant.phase>process-resources</ant.phase>
        <ant.target>upgradejenkins</ant.target>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>get-jenkins</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${jenkins.groupId}</groupId>
                      <artifactId>${jenkins.artifactId}</artifactId>
                      <version>${jenkins.version}</version>
                      <type>war</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
