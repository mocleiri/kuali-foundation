<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <name>Kuali CM Tools</name>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>28</version>
  </parent>
  <description>Configuration Management Tools</description>
  <groupId>org.kuali.cm</groupId>
  <artifactId>cm-tools</artifactId>
  <version>1.0.7-SNAPSHOT</version>
  <properties>
    <kuali.testjar.phase>none</kuali.testjar.phase>
    <antrun.version>1.7</antrun.version>
    <svn.foundation.repo>http://svn.kuali.org/repos/foundation</svn.foundation.repo>
  </properties>
  <scm>
    <connection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/cm-tools</connection>
    <developerConnection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/cm-tools</developerConnection>
    <url>http://svn.kuali.org/repos/foundation/pom/trunk/cm-tools</url>
  </scm>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>${antrun.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <organization>rSmart</organization>
      <timezone>-7</timezone>
      <email>jcaddel-(at)-kuali.org</email>
    </developer>
  </developers>
  <profiles>
    <profile>
      <id>jenkins</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
        <ant.target>none</ant.target>
        <ant.phase>none</ant.phase>
        <ant.file>target/classes/org/kuali/cm/jenkins/ant/build.xml</ant.file>
        <ant.java.fork>true</ant.java.fork>
        <jenkins.server>http://ec2-107-20-11-86.compute-1.amazonaws.com:8081/</jenkins.server>
        <jenkins.cli.classname>hudson.cli.CLI</jenkins.cli.classname>
        <jenkins.cli.wait>-s</jenkins.cli.wait>
        <jenkins.cli.changes>-c</jenkins.cli.changes>
        <jenkins.cli.version>1.440</jenkins.cli.version>
        <jenkins.job.name>${jenkins.project.artifactId}-${jenkins.project.majorVersion}-${jenkins.job.type}</jenkins.job.name>
        <jenkins.job.file>target/classes/org/kuali/cm/jenkins/jobs/${jenkins.template.type}-${jenkins.project.scm.type}-template.xml</jenkins.job.file>
        <jenkins.project.scm.type>svn</jenkins.project.scm.type>
        <jenkins.git.branch>master</jenkins.git.branch>
      </properties>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
            <includes>
              <include>**/jenkins/jobs/**/*.xml</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>false</filtering>
            <excludes>
              <exclude>**/jenkins/jobs/**/*.xml</exclude>
            </excludes>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <configuration>
              <target>
                <property name="maven.plugin.classpath" refid="maven.plugin.classpath" />
                <ant antfile="${ant.file}" target="${ant.target}" />
              </target>
            </configuration>
            <executions>
              <execution>
                <id>ant-run</id>
                <phase>${ant.phase}</phase>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.jenkins</groupId>
                <artifactId>jenkins-cli</artifactId>
                <version>${jenkins.cli.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release</id>
      <properties>
        <jenkins.mvn.goals>release:prepare release:perform -B -e</jenkins.mvn.goals>
        <jenkins.job.type>release</jenkins.job.type>
        <jenkins.job.description>Create an official Kuali release. Deploy artifacts to S3, generate the Maven web site, sync artifacts to Maven Central</jenkins.job.description>
        <jenkins.template.type>release</jenkins.template.type>
        <jenkins.postbuild.targets>deploy nexus:staging-close nexus:staging-release -Pkuali-release,sonatype-oss-release -DskipTests -e</jenkins.postbuild.targets>
        <jenkins.postbuild.pom>target/checkout/pom.xml</jenkins.postbuild.pom>
        <jenkins.postbuild.mavenName>(Default)</jenkins.postbuild.mavenName>
      </properties>
    </profile>
    <profile>
      <id>publish</id>
      <properties>
        <jenkins.mvn.goals>clean deploy site-deploy -Pkuali-release</jenkins.mvn.goals>
        <jenkins.job.type>publish</jenkins.job.type>
        <jenkins.job.description>Deploy artifacts to S3 using the same profile used during a release and publish the Maven web site</jenkins.job.description>
        <jenkins.template.type>simple</jenkins.template.type>
      </properties>
    </profile>
    <profile>
      <id>create</id>
      <properties>
        <ant.target>create</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>get</id>
      <properties>
        <ant.target>get</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>update</id>
      <properties>
        <ant.target>update</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>delete</id>
      <properties>
        <ant.target>delete</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>build</id>
      <properties>
        <ant.target>build</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>kuali</id>
      <properties>
        <jenkins.project.scm.url>${svn.foundation.repo}/pom/trunk/kuali</jenkins.project.scm.url>
        <jenkins.project.groupId>org.kuali.pom</jenkins.project.groupId>
        <jenkins.project.artifactId>kuali</jenkins.project.artifactId>
        <jenkins.project.majorVersion>1.0</jenkins.project.majorVersion>
      </properties>
    </profile>
    <profile>
      <id>kualicommon</id>
      <properties>
        <jenkins.project.scm.url>${svn.foundation.repo}/pom/trunk/kuali-common</jenkins.project.scm.url>
        <jenkins.project.groupId>org.kuali.pom</jenkins.project.groupId>
        <jenkins.project.artifactId>kuali-common</jenkins.project.artifactId>
        <jenkins.project.majorVersion>1.0</jenkins.project.majorVersion>
      </properties>
    </profile>
    <profile>
      <id>threads</id>
      <properties>
        <jenkins.project.scm.url>${svn.foundation.repo}/trunk/kuali-threads</jenkins.project.scm.url>
        <jenkins.project.groupId>org.kuali.common.threads</jenkins.project.groupId>
        <jenkins.project.artifactId>kuali-threads</jenkins.project.artifactId>
        <jenkins.project.majorVersion>1.0</jenkins.project.majorVersion>
      </properties>
    </profile>
    <profile>
      <id>wagon</id>
      <properties>
        <jenkins.project.scm.type>git</jenkins.project.scm.type>
        <jenkins.project.scm.url>git://github.com/jcaddel/maven-s3-wagon.git</jenkins.project.scm.url>
        <jenkins.project.groupId>org.kuali.maven.wagon</jenkins.project.groupId>
        <jenkins.project.artifactId>maven-s3-wagon</jenkins.project.artifactId>
        <jenkins.project.majorVersion>1.1</jenkins.project.majorVersion>
      </properties>
    </profile>
  </profiles>
</project>
