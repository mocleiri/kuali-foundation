<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <name>Kuali CM Tools</name>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>28</version>
  </parent>
  <description>Configuration Management Tools</description>
  <groupId>org.kuali.cm</groupId>
  <artifactId>cm-tools</artifactId>
  <version>1.7-SNAPSHOT</version>
  <properties>
    <kuali.testjar.phase>none</kuali.testjar.phase>
    <antrun.version>1.7</antrun.version>
    <svn.foundation.repo>http://svn.kuali.org/repos/foundation</svn.foundation.repo>
  </properties>
  <scm>
    <connection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/cm-tools</connection>
    <developerConnection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/cm-tools</developerConnection>
    <url>http://svn.kuali.org/repos/foundation/pom/trunk/cm-tools</url>
  </scm>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>${antrun.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <developers>
    <developer>
      <id>jcaddel</id>
      <name>Jeff Caddel</name>
      <organization>rSmart</organization>
      <timezone>-7</timezone>
      <email>jcaddel-(at)-kuali.org</email>
    </developer>
  </developers>
  <profiles>
    <profile>
      <id>jenkins</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
        <ant.target>none</ant.target>
        <ant.phase>none</ant.phase>
        <ant.file>src/main/resources/org/kuali/cm/jenkins/build.xml</ant.file>
        <ant.java.fork>true</ant.java.fork>
        <jenkins.scm.url>${jenkins.svn.repo}/${jenkins.svn.path}</jenkins.scm.url>
        <jenkins.job.name>${jenkins.project.artifactId}-publish</jenkins.job.name>
        <jenkins.job.file>target/classes/org/kuali/cm/jenkins/publish.xml</jenkins.job.file>
        <jenkins.url>http://ec2-107-20-11-86.compute-1.amazonaws.com:8081/</jenkins.url>
        <jenkins.cli.classname>hudson.cli.CLI</jenkins.cli.classname>
        <jenkins.wait>-s</jenkins.wait>
        <jenkins.changes>-c</jenkins.changes>
      </properties>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
            <includes>
              <include>**/jenkins/jobs/**/*.xml</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>false</filtering>
            <excludes>
              <exclude>**/jenkins/jobs/**/*.xml</exclude>
            </excludes>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>ant-run</id>
                <phase>${ant.phase}</phase>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <target>
                <property name="maven.plugin.classpath" refid="maven.plugin.classpath" />
                <ant antfile="${ant.file}" target="${ant.target}" />
              </target>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>org.jenkins</groupId>
                <artifactId>jenkins-cli</artifactId>
                <version>1.440</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>publish</id>
      <properties>
        <jenkins.mvn.goals>clean deploy site-deploy</jenkins.mvn.goals>
        <jenkins.job.name>${jenkins.project.artifactId}-publish</jenkins.job.name>
        <jenkins.job.file>target/classes/org/kuali/cm/jenkins/jobs/publish-template.xml</jenkins.job.file>
      </properties>
    </profile>
    <profile>
      <id>create</id>
      <properties>
        <ant.target>create</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>get</id>
      <properties>
        <ant.target>get</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>update</id>
      <properties>
        <ant.target>update</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>delete</id>
      <properties>
        <ant.target>delete</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>build</id>
      <properties>
        <ant.target>build</ant.target>
        <ant.phase>install</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>kuali</id>
      <properties>
        <jenkins.svn.repo>${svn.foundation.repo}</jenkins.svn.repo>
        <jenkins.svn.path>pom/trunk/parent</jenkins.svn.path>
        <jenkins.project.groupId>org.kuali.pom</jenkins.project.groupId>
        <jenkins.project.artifactId>kuali</jenkins.project.artifactId>
        <jenkins.project.version.major>1.0</jenkins.project.version.major>
      </properties>
    </profile>
    <profile>
      <id>wagon</id>
      <properties>
        <jenkins.svn.repo>${svn.foundation.repo}</jenkins.svn.repo>
        <jenkins.svn.path>trunk/maven-s3-wagon</jenkins.svn.path>
        <jenkins.project.groupId>org.kuali.pom</jenkins.project.groupId>
        <jenkins.project.artifactId>kuali</jenkins.project.artifactId>
        <jenkins.project.version.major>1.0</jenkins.project.version.major>
      </properties>
    </profile>
  </profiles>
</project>
