<project name="Project CI">
  <description>Create CI jobs for Kuali projects</description>

  <property name="ant.failonerror" value="false" />

  <target name="jobs">
    <antcall target="execute">
      <param name="ci.job" value="publish" />
    </antcall>
    <antcall target="execute">
      <param name="ci.job" value="release" />
    </antcall>
    <antcall target="execute">
      <param name="ci.job" value="license" />
    </antcall>
    <antcall target="execute">
      <param name="ci.job" value="unit-test" />
    </antcall>
  </target>

  <target name="projects">
    <antcall target="execute">
      <param name="p" value="cm-tools" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="extractor-maven-plugin" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="kuali-common" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="kuali-threads" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="kuali" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="maven-cloudfront-plugin" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="maven-ksite-plugin" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="maven-kuali-common" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="maven-kuali-skin" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="maven-s3-wagon" />
    </antcall>
    <antcall target="execute">
      <param name="p" value="properties-maven-plugin" />
    </antcall>
  </target>

  <target name="execute">
    <exec executable="mvn" failonerror="${ant.failonerror}" newenvironment="true">
      <arg value="clean" />
      <arg value="process-resources" />
      <arg value="-Pci" />
      <arg value="-Dp=${p}" />
      <arg value="-Djob=${ci.job}" />
      <arg value="-Dcmd=${ci.cmd}" />
    </exec>
  </target>

</project>