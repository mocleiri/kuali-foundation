<project name="Jenkins CLI Wrapper">
  <description>Ant wrapper for Jenkins CLI calls</description>

  <target name="noop" />

  <target name="cli">
    <echo>${jenkins.server} - ${jenkins.cmd}</echo>
    <java classname="${jenkins.cli.classname}" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}" failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="${jenkins.cli.cmd}" />
    </java>
  </target>

  <target name="job">
    <java classname="${jenkins.cli.classname}" output="target/${jenkins.job.name}-config.xml" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}"
      failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="${jenkins.cli.cmd}" />
      <arg value="${jenkins.job.name}" />
    </java>
  </target>

  <target name="get">
    <java classname="${jenkins.cli.classname}" output="target/${jenkins.job.name}-config.xml" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}"
      failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="get-job" />
      <arg value="${jenkins.job.name}" />
    </java>
  </target>

  <target name="create">
    <java classname="${jenkins.cli.classname}" input="${jenkins.job.file}" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}" failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="create-job" />
      <arg value="${jenkins.job.name}" />
    </java>
  </target>

  <target name="update">
    <java classname="${jenkins.cli.classname}" input="${jenkins.job.file}" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}" failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="update-job" />
      <arg value="${jenkins.job.name}" />
    </java>
  </target>

  <target name="delete">
    <java classname="${jenkins.cli.classname}" input="${jenkins.job.file}" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}" failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="delete-job" />
      <arg value="${jenkins.job.name}" />
    </java>
  </target>

  <target name="build">
    <java classname="${jenkins.cli.classname}" input="${jenkins.job.file}" classpath="${maven.plugin.classpath}" fork="${ant.java.fork}" failonerror="${ant.java.failonerror}">
      <arg value="-s" />
      <arg value="${jenkins.server}" />
      <arg value="build" />
      <arg value="${jenkins.job.name}" />
      <arg value="${jenkins.cli.changes}" />
      <arg value="${jenkins.cli.wait}" />
    </java>
  </target>

</project>