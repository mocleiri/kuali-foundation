<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.2.25</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-ec2</artifactId>
  <version>1.0.4-SNAPSHOT</version>
  <name>EC2 Tooling</name>
  <description>Various tooling for for working with Amazon's Elastic Computing Cloud aka ""EC2"</description>
  <url>http://${kuali.site.hostname}/common/${project.artifactId}/${project.version}</url>
  <scm>
    <connection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/kuali-ec2</connection>
    <developerConnection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/kuali-ec2</developerConnection>
    <url>http://svn.kuali.org/repos/foundation/trunk/kuali-ec2</url>
  </scm>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <maven.test.skip>true</maven.test.skip>
    <!-- Plugin versions -->
    <plugin.ant.version>1.0.5</plugin.ant.version>
    <plugin.dependency.version>2.4</plugin.dependency.version>

    <environment>ec2</environment>
    <tomcat.artifactId>apache-tomcat</tomcat.artifactId>
    <tomcat.zip>target/dependency/${tomcat.artifactId}-${tomcat.version}.zip</tomcat.zip>
    <tomcat.dir>/usr/local/${tomcat.artifactId}-${tomcat.version}</tomcat.dir>
    <ant.phase>none</ant.phase>
    <ant.file>src/main/resources/build.xml</ant.file>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>ant-maven-plugin</artifactId>
          <version>${plugin.ant.version}</version>
          <configuration>
            <file>${ant.file}</file>
            <target>${ant.target}</target>
          </configuration>
          <executions>
            <execution>
              <id>run</id>
              <phase>${ant.phase}</phase>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>ant-contrib</groupId>
              <artifactId>ant-contrib</artifactId>
              <version>1.0b3</version>
              <exclusions>
                <exclusion>
                  <groupId>ant</groupId>
                  <artifactId>ant</artifactId>
                </exclusion>
              </exclusions>
            </dependency>
            <dependency>
              <groupId>${project.groupId}</groupId>
              <artifactId>${project.artifactId}</artifactId>
              <version>${project.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${plugin.dependency.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>ant-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>ec2</id>
      <build>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
            <includes>
              <include>ec2/**/*</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>false</filtering>
            <excludes>
              <exclude>ec2/**/*</exclude>
            </excludes>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>resetall</id>
      <properties>
        <ant.target>resetall</ant.target>
        <ant.phase>process-resources</ant.phase>
      </properties>
    </profile>
    <profile>
      <id>6</id>
      <properties>
        <tomcat.major.version>6</tomcat.major.version>
        <tomcat.version>${tomcat.major.version}.0.35</tomcat.version>
      </properties>
    </profile>
    <profile>
      <id>7</id>
      <properties>
        <tomcat.major.version>7</tomcat.major.version>
        <tomcat.version>${tomcat.major.version}.0.26</tomcat.version>
      </properties>
    </profile>
    <profile>
      <id>tomcat</id>
      <properties>
        <ant.phase>process-resources</ant.phase>
        <ant.target>installtomcat</ant.target>
        <tomcat.shutdown.port>8005</tomcat.shutdown.port>
        <tomcat.http.port>80</tomcat.http.port>
        <tomcat.https.port>443</tomcat.https.port>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>get-tomcat</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.apache.tomcat</groupId>
                      <artifactId>${tomcat.artifactId}</artifactId>
                      <version>${tomcat.version}</version>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>medium</id>
      <properties>
        <ant.phase>process-resources</ant.phase>
        <ant.target>resetmedium</ant.target>
        <tomcat.shutdown.port>8005</tomcat.shutdown.port>
        <tomcat.http.port>8080</tomcat.http.port>
        <tomcat.https.port>8443</tomcat.https.port>
      </properties>
    </profile>
    <profile>
      <id>appdynamics</id>
      <properties>
        <appdynamics.groupId>com.appdynamics</appdynamics.groupId>
        <appdynamics.artifactId>server-agent</appdynamics.artifactId>
        <appdynamics.version>3.4.2.0</appdynamics.version>
        <ant.phase>process-resources</ant.phase>
        <ant.target>installappdynamics</ant.target>
        <appdynamics.zip>target/dependency/${appdynamics.artifactId}-${appdynamics.version}.zip</appdynamics.zip>
        <appdynamics.dir>/usr/local/${appdynamics.artifactId}-${appdynamics.version}</appdynamics.dir>
        <appdynamics.symlink>/usr/local/${appdynamics.artifactId}</appdynamics.symlink>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>copy</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${appdynamics.groupId}</groupId>
                      <artifactId>${appdynamics.artifactId}</artifactId>
                      <version>${appdynamics.version}</version>
                      <type>zip</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jenkins</id>
      <properties>
        <jenkins.groupId>org.jenkins</jenkins.groupId>
        <jenkins.artifactId>jenkins</jenkins.artifactId>
        <jenkins.version>1.440</jenkins.version>
        <jenkins.war>target/dependency/${jenkins.artifactId}-${jenkins.version}.war</jenkins.war>
        <tomcat.instance>1</tomcat.instance>
        <ant.phase>process-resources</ant.phase>
        <ant.target>upgradejenkins</ant.target>
      </properties>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>get-jenkins</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${jenkins.groupId}</groupId>
                      <artifactId>${jenkins.artifactId}</artifactId>
                      <version>${jenkins.version}</version>
                      <type>war</type>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>