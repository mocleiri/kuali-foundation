#!/bin/sh

# init script for slave instances
# output is logged to /var/log/boot.log

echo $(date)
set -xe

scp root@ci.rice.kuali.org:/var/lib/jenkins/.m2/settings.xml /root/.m2/settings.xml
scp root@ci.rice.kuali.org:/var/lib/jenkins/.ssh/ks-key.pem /root/.ssh/ks-key.pem
scp root@ci.rice.kuali.org:/var/lib/jenkins/.ssh/devops-key.pem /root/.ssh/devops-key.pem
# /root/kuali-ec2/src/main/resources/jenkins/slave/copy-repo-from-master ci.rice.kuali.org

set +x
echo $(date)
