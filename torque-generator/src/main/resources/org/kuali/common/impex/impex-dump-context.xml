<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

  <!-- These will be pumped into the context by spring-maven-plugin once things are tightened up a bit -->
  <util:properties id="mavenProperties">
    <prop key="project.basedir">${user.home}/ws/impex-2.0/torque-generator</prop>
    <prop key="project.build.directory">${project.basedir}/target</prop>
    <prop key="project.artifactId">ks-source-db</prop>
    <prop key="impex.workingDir">${project.build.directory}/impex</prop>
    <prop key="impex.antCompatibilityMode">false</prop>
    <prop key="impex.includes">KR.*,KS.*</prop>
    <prop key="impex.table.includes">${impex.includes}</prop>
    <prop key="impex.view.includes">${impex.includes}</prop>
    <prop key="impex.sequence.includes">${impex.includes}</prop>
    <prop key="impex.url">jdbc:oracle:thin:@oracle.ks.kuali.org:1521:ORACLE</prop>
    <prop key="impex.driver">oracle.jdbc.driver.OracleDriver</prop>
    <prop key="impex.username">KS_SOURCE_DB_SPRING</prop>
    <prop key="impex.password">${impex.username}</prop>
    <prop key="impex.schema">${impex.username}</prop>
    <prop key="impex.databaseVendor">oracle</prop>
    <prop key="impex.metadata.threads">5</prop>
    <prop key="impex.data.threads">15</prop>
    <prop key="impex.databaseTablePropertiesFile">${project.basedir}/src/main/resources/${project.artifactId}.properties</prop>
  </util:properties>

  <context:property-placeholder properties-ref="mavenProperties" />

  <bean id="databaseVendors" class="org.kuali.common.impex.DumpExecutable" init-method="execute">
  </bean>

</beans>