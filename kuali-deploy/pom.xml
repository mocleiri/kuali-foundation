<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>3.3.21</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-deploy</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <name>Kuali Deploy</name>
  <description>Project containing deployment logic for Kuali applications</description>
  <url>http://${kuali.site.hostname}/common/${project.artifactId}/${project.version}</url>
  <scm>
    <connection>scm:${project.scm.vendor}:${project.scm.url}</connection>
    <developerConnection>scm:${project.scm.vendor}:${project.scm.url}</developerConnection>
    <url>${project.scm.url}</url>
  </scm>
  <properties>
    <parent.groupId>${project.parent.groupId}</parent.groupId>
    <parent.artifactId>${project.parent.artifactId}</parent.artifactId>
    <parent.version>${project.parent.version}</parent.version>
    <ant.phase>process-resources</ant.phase>
    <junit.version>4.11</junit.version>
    <slf4j.version>1.7.5</slf4j.version>
    <oracle.groupId>com.oracle</oracle.groupId>
    <oracle.artifactId>ojdbc6_g</oracle.artifactId>
    <oracle.version>11.2.0.2</oracle.version>
    
    <project.scm.url>https://svn.kuali.org/repos/foundation/trunk/kuali-deploy</project.scm.url>

    <!-- These properties modify the release process -->
    <kuali.release.arguments>-DskipTests</kuali.release.arguments>
  </properties>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>ant-maven-plugin</artifactId>
            <executions>
              <!--
                This execution invokes Ant in order to perform some custom filtering.
                All the poms in this project have filtering applied to the following 6 GAV related properties:

                parent.groupId
                parent.artifactId
                parent.version
                project.groupId
                project.artifactId
                project.version

                The custom filtering ensures that all of the poms inherit from the same parent pom as this project. It also
                ensures that any references those poms make to the kuali-deploy.jar file are automatically kept up to date.
              -->
              <execution>
                <id>run</id>
                <phase>${ant.phase}</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <file>src/main/resources/org/kuali/common/deploy/ant/build.xml</file>
                  <target>filter-poms</target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
        <testResources>
          <testResource>
            <directory>src/test/resources</directory>
            <filtering>true</filtering>
            <includes>
              <include>**/maven.properties</include>
            </includes>
          </testResource>
          <testResource>
            <directory>src/test/resources</directory>
            <filtering>false</filtering>
            <excludes>
              <exclude>**/maven.properties</exclude>
            </excludes>
          </testResource>
        </testResources>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-jdbc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-sql</artifactId>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-util</artifactId>
    </dependency>
    <dependency>
      <groupId>org.kuali.common</groupId>
      <artifactId>kuali-http</artifactId>
      <version>${kuali-http.version}</version>
    </dependency>
    <dependency>
      <groupId>${oracle.groupId}</groupId>
      <artifactId>${oracle.artifactId}</artifactId>
      <version>${oracle.version}</version>
    </dependency>
  </dependencies>
</project>
              
