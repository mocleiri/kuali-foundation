<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>1.1.7</version>
  </parent>
  <groupId>org.kuali.common</groupId>
  <artifactId>kuali-deploy</artifactId>
  <name>Kuali Deploy</name>
  <properties>
    <!-- plugin versions -->
    <plugin.ant.version>1.0.8</plugin.ant.version>
    <plugin.dependency.version>2.4</plugin.dependency.version>
    <plugin.properties.version>1.1.0</plugin.properties.version>
    <plugin.manifest.version>1.1.0</plugin.manifest.version>
    <plugin.impex.version>1.0.27</plugin.impex.version>

    <!-- jars -->
    <kuali-cm.version>1.2.0-SNAPSHOT</kuali-cm.version>
    <kuali-sql.version>1.1.0</kuali-sql.version>
    <ant-jsch.version>1.8.2</ant-jsch.version>

    <!-- Turn off some executions irrelevant to the deploy process -->
    <gmaven.stubs.phase>none</gmaven.stubs.phase>
    <gmaven.compile.phase>none</gmaven.compile.phase>
    <gmaven.test.compile.phase>none</gmaven.test.compile.phase>
    <enforcer.phase>none</enforcer.phase>
    <failsafe.phase>none</failsafe.phase>
    <maven.test.skip>true</maven.test.skip>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>${plugin.dependency.version}</version>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>maven-impex-plugin</artifactId>
          <version>${plugin.impex.version}</version>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>ant-maven-plugin</artifactId>
          <version>${plugin.ant.version}</version>
          <dependencies>
            <dependency>
              <groupId>org.apache.ant</groupId>
              <artifactId>ant-jsch</artifactId>
              <version>${ant-jsch.version}</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.common</groupId>
              <artifactId>kuali-cm</artifactId>
              <version>${kuali-cm.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>properties-maven-plugin</artifactId>
          <version>${plugin.properties.version}</version>
          <executions>
            <execution>
              <id>initialize</id>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <quiet>true</quiet>
                <locations>
                  <param>classpath:org/kuali/common/cm/deploy/common.properties</param>
                  <param>classpath:org/kuali/common/cm/deploy/${deploy.project}.properties</param>
                  <param>classpath:org/kuali/common/cm/deploy/${deploy.project}/${deploy.app}.properties</param>
                  <param>classpath:org/kuali/common/cm/deploy/${deploy.project}/env${deploy.env}.properties</param>
                </locations>
              </configuration>
            </execution>
            <execution>
              <id>db</id>
              <phase>initialize</phase>
              <goals>
                <goal>read-project-properties</goal>
              </goals>
              <configuration>
                <locations>
                  <param>classpath:sql.properties</param>
                  <param>classpath:${db.vendor}.xml</param>
                </locations>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.kuali.common</groupId>
              <artifactId>kuali-cm</artifactId>
              <version>${kuali-cm.version}</version>
            </dependency>
            <dependency>
              <groupId>org.kuali.db.sql</groupId>
              <artifactId>kuali-sql</artifactId>
              <version>${kuali-sql.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <profiles>
    <profile>
      <id>ks</id>
      <properties>
        <deploy.project>ks</deploy.project>
        <deploy.app>ks-embedded</deploy.app>
      </properties>
    </profile>
    <profile>
      <id>rice</id>
      <properties>
        <deploy.project>rice</deploy.project>
        <deploy.app>sampleapp</deploy.app>
      </properties>
    </profile>
    <profile>
      <id>deploy</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>properties-maven-plugin</artifactId>
          </plugin>
          <plugin>
            <artifactId>maven-enforcer-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>ant-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>run</id>
                <phase>install</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <file>${ant.file}</file>
                  <target>${ant.deploy.target}</target>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-http-plugin</artifactId>
            <executions>
              <execution>
                <id>wait-for-tomcat-startup</id>
                <phase>install</phase>
                <goals>
                  <goal>wait</goal>
                </goals>
                <configuration>
                  <url>${public.url}</url>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>local</id>
      <properties>
        <deploy.war>${local.app.dir}/target/${deploy.artifactId}-${project.version}.war</deploy.war>
        <impex.dir>../../db/impex/master</impex.dir>
      </properties>
    </profile>
    <profile>
      <id>download</id>
      <build>
        <resources>
          <resource>
            <directory>${project.build.directory}/dependency/kuali-cm/org/kuali/common/cm/deploy/${deploy.project}/config</directory>
            <filtering>true</filtering>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>properties-maven-plugin</artifactId>
          </plugin>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>download</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${deploy.groupId}</groupId>
                      <artifactId>${deploy.artifactId}</artifactId>
                      <version>${deploy.version}</version>
                      <type>${deploy.type}</type>
                      <includes>**/MANIFEST.MF</includes>
                    </artifactItem>
                    <artifactItem>
                      <groupId>${jdbc.driver.groupId}</groupId>
                      <artifactId>${jdbc.driver.artifactId}</artifactId>
                      <version>${jdbc.driver.version}</version>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.kuali.common</groupId>
                      <artifactId>kuali-cm</artifactId>
                      <version>${kuali-cm.version}</version>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>unpack-app</id>
                <phase>initialize</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${deploy.groupId}</groupId>
                      <artifactId>${deploy.artifactId}</artifactId>
                      <version>${deploy.version}</version>
                      <type>${deploy.type}</type>
                      <includes>**/MANIFEST.MF</includes>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>unpack-cm</id>
                <phase>initialize</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}/dependency/kuali-cm</outputDirectory>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.kuali.common</groupId>
                      <artifactId>kuali-cm</artifactId>
                      <version>${kuali-cm.version}</version>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-manifest-plugin</artifactId>
            <version>1.1.0</version>
            <configuration>
              <filename>target/dependency/META-INF/MANIFEST.MF</filename>
              <prefix>manifest</prefix>
            </configuration>
            <executions>
              <execution>
                <id>getsvnrevision</id>
                <phase>initialize</phase>
                <goals>
                  <goal>getsvnrevision</goal>
                </goals>
                <configuration>
                  <attribute>SVN-Revision</attribute>
                </configuration>
              </execution>
              <execution>
                <id>getsvnurl</id>
                <phase>initialize</phase>
                <goals>
                  <goal>getsvnurl</goal>
                </goals>
                <configuration>
                  <attribute>SVN-URL</attribute>
                  <suffix>${impex.relative.dir}</suffix>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>ant-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>checkout</id>
                <phase>initialize</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <file>${ant.file}</file>
                  <target>${ant.download.target}</target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>