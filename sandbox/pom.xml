<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali-common</artifactId>
    <version>15</version>
  </parent>
  <groupId>org.kuali.sandbox</groupId>
  <artifactId>sandbox</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Sandbox</name>
  <description>Kuali Sandbox</description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <kuali.testjar.phase>none</kuali.testjar.phase>
  </properties>
  <build>
    <plugins>
      <!-- 
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.5-SNAPSHOT</version>
      </plugin>
       -->
      <plugin>
        <groupId>org.apach.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <id>add-commit</id>
            <phase>process-resources</phase>
            <goals>
              <goal>add</goal>
              <goal>checkin</goal>
            </goals>
            <configuration>
              <message>SCM via maven</message>
              <includes>**/src/main/resources/*.xml,**/src/main/resources/*.txt</includes>
            </configuration>
          </execution>
          <execution>
            <id>remove-commit</id>
            <phase>process-resources</phase>
            <goals>
              <goal>remove</goal>
              <goal>checkin</goal>
            </goals>
            <configuration>
              <message>SCM via maven</message>
              <includes>**/src/main/resources/*.xml,**/src/main/resources/*.txt</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <scm>
    <connection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/sandbox</connection>
    <developerConnection>scm:svn:http://svn.kuali.org/repos/foundation/trunk/sandbox</developerConnection>
    <url>http://svn.kuali.org/repos/foundation/trunk/sandbox</url>
  </scm>
</project>