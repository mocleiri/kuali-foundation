<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- The following properties are populated by maven when the test resources are processed -->
    <util:properties id="mavenProperties">
        <prop key="db.vendor">#{vendorSpecificProperties['vendor']}</prop>
        <prop key="kuali.encoding">${kuali.encoding}</prop>
        <prop key="project.groupId">${project.groupId}</prop>
        <prop key="project.artifactId">${project.artifactId}</prop>
        <prop key="project.version">${project.version}</prop>
        <prop key="project.basedir">${project.basedir}</prop>
        <prop key="project.build.directory">${project.build.directory}</prop>
        <prop key="kuali.groupId">${kuali.groupId}</prop>
        <prop key="jdbc.username">TRQ_GEN_TEST_DB</prop>
    </util:properties>

    <context:property-placeholder properties-ref="mavenProperties" system-properties-mode="NEVER" />

    <util:list id="locations" value-type="java.lang.String">
        <value>classpath:org/kuali/common/jdbc/jdbc.properties</value>
        <value>classpath:org/kuali/common/jdbc/service.properties</value>
        <value>classpath:org/kuali/common/deploy/jdbc.properties</value>
        <value>classpath:org/kuali/common/sql/sql.xml</value>
        <value>classpath:org/kuali/common/sql/mysql.xml</value>
        <value>classpath:org/kuali/common/sql/oracle.xml</value>
        <value>classpath:org/kuali/common/sql/h2.xml</value>
        <value>classpath:org/kuali/common/sql/derby.xml</value>
    </util:list>

    <util:list id="locationHelperIncludes" value-type="java.lang.String">
        <value>kuali.encoding</value>
        <value>kuali.groupId</value>
        <value>project.groupId</value>
        <value>project.artifactId</value>
        <value>project.version</value>
        <value>project.classifier</value>
        <value>kuali.enc.*</value>
    </util:list>

    <util:list id="buildPropertyIncludes" value-type="java.lang.String">
        <value>db.vendor</value>
        <value>jdbc.*</value>
        <value>oracle.*</value>
        <value>mysql.*</value>
        <value>h2.*</value>
        <value>sql.*</value>
    </util:list>

    <bean id="commonProperties" class="org.kuali.common.util.spring.PropertyFactoryBean">
        <property name="singleton" value="false"/>
        <property name="locations" ref="locations" />
        <property name="locationHelperProperties" ref="mavenProperties" />
        <property name="buildProperties" ref="mavenProperties" />
        <property name="encryptionMode" value="${kuali.enc.mode:NONE}" />
        <property name="encryptionPassword" value="${kuali.enc.password:NONE}" />
        <property name="organizationGroupId" value="${kuali.groupId}" />
        <property name="encoding" value="${kuali.encoding}" />
        <property name="locationHelperIncludes" ref="locationHelperIncludes" />
        <property name="buildPropertyIncludes" ref="buildPropertyIncludes" />
    </bean>

    <bean id="databaseProcessContext" class="org.kuali.common.jdbc.context.DatabaseProcessContext">
        <property name="vendor" value="${db.vendor}" />
        <property name="driver" value="#{commonProperties['jdbc.driver']}" />
        <property name="url" value="#{commonProperties['jdbc.url']}" />
        <property name="username" value="#{commonProperties['jdbc.username']}" />
        <property name="password" value="#{commonProperties['jdbc.password']}" />
        <property name="dbaUrl" value="#{commonProperties['jdbc.dba.url']}" />
        <property name="dbaUsername" value="#{commonProperties['jdbc.dba.username']}" />
        <property name="dbaPassword" value="#{commonProperties['jdbc.dba.password']}" />
    </bean>

    <util:list id="deploy.nullableProperties" value-type="java.lang.String">
        <value>dbaUsername</value>
        <value>dbaPassword</value>
        <value>username</value>
        <value>password</value>
    </util:list>

    <util:list id="deploy.nullTokens" value-type="java.lang.String">
        <value>NONE</value>
        <value>NULL</value>
    </util:list>

    <bean id="common.nullifier" class="org.kuali.common.util.nullify.DefaultBeanNullifier" init-method="nullify" abstract="true">
        <property name="properties" ref="deploy.nullableProperties" />
        <property name="nullTokens" ref="deploy.nullTokens" />
    </bean>

    <bean id="nullifier" class="org.kuali.common.util.nullify.DefaultBeanNullifier" init-method="nullify" parent="common.nullifier">
        <property name="bean" ref="databaseProcessContext" />
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" depends-on="nullifier">
        <property name="driverClassName" value="#{databaseProcessContext.driver}" />
        <property name="url" value="#{databaseProcessContext.url}" />
        <property name="username" value="#{databaseProcessContext.username}" />
        <property name="password" value="#{databaseProcessContext.password}" />
    </bean>

    <bean id="dbaDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" depends-on="nullifier">
        <property name="driverClassName" value="#{databaseProcessContext.driver}" />
        <property name="url" value="#{databaseProcessContext.dbaUrl}" />
        <property name="username" value="#{databaseProcessContext.dbaUsername}" />
        <property name="password" value="#{databaseProcessContext.dbaPassword}" />
    </bean>

    <bean id="dbaJdbcContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dbaDataSource" />
    </bean>

    <bean id="normalJdbcContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <util:list id="resetSqls">
        <value>#{commonProperties['sql.validate']}</value>
        <value>#{commonProperties['sql.drop']}</value>
        <value>#{commonProperties['sql.create']}</value>
    </util:list>

    <bean id="dbResetSupplier" class="org.kuali.common.jdbc.supplier.ComplexStringSupplier">
        <property name="strings" ref="resetSqls"/>
    </bean>

    <util:properties id="impexContextProperties">
        <prop key="project.artifactId">${project.artifactId}</prop>
        <prop key="project.basedir">${project.basedir}</prop>
        <prop key="project.build.directory">${project.build.directory}</prop>
        <prop key="impex.schema">#{databaseProcessContext.username}</prop>
        <prop key="impex.driver">#{databaseProcessContext.driver}</prop>
        <prop key="impex.url">#{databaseProcessContext.url}</prop>
        <prop key="impex.username">#{databaseProcessContext.username}</prop>
        <prop key="impex.password">#{databaseProcessContext.username}</prop>
        <prop key="impex.databaseVendor">#{databaseProcessContext.vendor}</prop>
        <prop key="impex.workingDir">${project.build.directory}/impex</prop>
        <prop key="impex.table.includes">.*</prop>
        <prop key="impex.databaseTablePropertiesFile">${project.basedir}/src/main/resources/${project.artifactId}.properties</prop>
        <prop key="impex.tablesXmlLocation">${project.build.directory}/impex/${project.artifactId}.xml</prop>
    </util:properties>

    <bean id="impexContext" class="org.kuali.common.impex.ImpexContextFactoryBean">
        <property name="properties" ref="impexContextProperties"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="importContext" class="org.kuali.common.impex.service.ImportContext">
        <property name="databaseVendor" value="#{databaseProcessContext.vendor}"/>
        <property name="dataLocations" value="classpath:mpxTests/mpxLocations.resources"/>
        <property name="schemaXmlLocation" value="${project.build.directory}/impex/${project.artifactId}.xml"/>
    </bean>

    <bean id="resetContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dbaDataSource" />
        <property name="threads" value="8"/>
        <property name="suppliers">
            <list>
                <ref bean="dbResetSupplier"/>
            </list>
        </property>
        <property name="message" value="Reset DB"/>
    </bean>

    <bean id="initialContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dataSource" />
        <property name="suppliers" ref="initialSupplierList"/>
        <property name="message" value="First pass data and schema"/>
    </bean>

    <bean id="schemaContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dataSource" />
        <property name="suppliers">
            <list>
                <ref bean="schemaSupplier"/>
            </list>
        </property>
        <property name="threads" value="8"/>
        <property name="message" value="Second pass schema"/>
    </bean>

    <bean id="mpxContext" class="org.kuali.common.jdbc.context.JdbcContext">
        <property name="dataSource" ref="dataSource" />
        <property name="threads" value="1"/>
        <property name="message" value="Second pass data"/>
        <property name="listener" ref="sqlLogger"/>
    </bean>

    <bean id="sqlLogger" class="org.kuali.common.jdbc.listener.LogSqlListener">
        <property name="mode" value="BEFORE"/>
        <property name="flatten" value="false"/>
    </bean>

    <bean id="impexService" class="org.kuali.common.impex.service.DefaultImpexGeneratorService"/>

    <bean id="jdbcService" class="org.kuali.common.jdbc.DefaultJdbcService"/>

    <bean id="schemaSupplier" class="org.kuali.common.jdbc.supplier.SqlLocationSupplier">
        <property name="encoding" value="${kuali.encoding}"/>
        <property name="location" value="classpath:mpxTests/${db.vendor}/test-db-schema.sql"/>
    </bean>

    <bean id="dataSupplier1" class="org.kuali.common.jdbc.supplier.SqlLocationSupplier">
        <property name="encoding" value="${kuali.encoding}"/>
        <property name="location" value="classpath:mpxTests/${db.vendor}/FOO_T.sql"/>
    </bean>

    <bean id="dataSupplier2" class="org.kuali.common.jdbc.supplier.SqlLocationSupplier">
        <property name="encoding" value="${kuali.encoding}"/>
        <property name="location" value="classpath:mpxTests/${db.vendor}/BAZ_T.sql"/>
    </bean>

    <util:list id="initialSupplierList">
        <ref bean="schemaSupplier"/>
        <ref bean="dataSupplier1"/>
        <ref bean="dataSupplier2"/>
    </util:list>

</beans>