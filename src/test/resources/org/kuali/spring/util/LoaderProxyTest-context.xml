<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <bean id="trace.callback" class="org.kuali.spring.proxy.TraceCallback" />

  <bean id="plogger" class="org.kuali.spring.util.PropertyLogger" />
  <bean id="plogger.proxy" class="org.kuali.spring.util.SimpleProxyFactoryBean" p:callback-ref="trace.callback"
    p:sourceBean-ref="plogger" />

  <bean id="ploader" class="org.kuali.spring.util.PropertiesLoader" p:plogger-ref="plogger.proxy"
    p:locations="classpath:org/kuali/spring/util/test.properties" />
  <bean id="ploader.proxy" class="org.kuali.spring.util.SimpleProxyFactoryBean" p:callback-ref="trace.callback"
    p:sourceBean-ref="ploader" />

  <bean id="pconverter" class="org.kuali.spring.util.PropertiesConverter" p:plogger-ref="plogger.proxy" />
  <bean id="pconverter.proxy" class="org.kuali.spring.util.SimpleProxyFactoryBean" p:callback-ref="trace.callback"
    p:sourceBean-ref="pconverter" />

  <bean id="presolver" class="org.kuali.spring.util.PropertiesResolver" p:plogger-ref="plogger.proxy" />
  <bean id="presolver.proxy" class="org.kuali.spring.util.SimpleProxyFactoryBean" p:callback-ref="trace.callback"
    p:sourceBean-ref="presolver" />

  <bean id="kuali.pconfigurer" class="org.kuali.spring.util.PropertiesPlaceholderConfigurer" p:loader-ref="ploader.proxy"
    p:converter-ref="pconverter.proxy" p:resolver-ref="presolver.proxy" />


</beans>