<project name="db">
  <taskdef name="mvn" classname="org.kuali.maven.common.MvnTask" />
  <target name="db">
    <property name="mvn.quiet" value="false" />
    <loadproperties srcFile="${properties.original}" />
    <mvn pom="classpath:org/kuali/common/deploy/mvn/enforcer.xml" filterPom="true" quiet="${mvn.quiet}" silent="false">
      <arg value="initialize" />
    </mvn>
    <mvn pom="classpath:org/kuali/common/deploy/mvn/properties.xml" filterPom="true" quiet="${mvn.quiet}" silent="false">
      <arg value="initialize" />
      <arg value="-Dproperties.includeSystemProperties=true" />
      <arg value="-Dproperties.includeEnvironmentVariables=true" />
      <property key="deploy.groupId" />
      <property key="deploy.artifactId" />
      <property key="deploy.version" />
      <property key="deploy.env" />
      <property key="impex.dba.username" />
      <property key="impex.dba.password" />
      <property key="impex.username" />
      <property key="impex.password" />
      <property key="impex.url" />
      <property key="impex.dba.url" />
      <property key="db.vendor" />
      <property key="db.instance" />
    </mvn>
    <loadproperties srcFile="${properties.all}" />
    <mvn pom="classpath:org/kuali/common/deploy/mvn/resetdb.xml" filterPom="true" quiet="${mvn.quiet}" silent="false">
      <arg value="initialize" />
    </mvn>
    <antcall target="ole-impex-rice-schema-and-data" />
    <antcall target="ole-impex-master-schema-and-data" />
    <antcall target="ole-impex-rice-constraints" />
    <antcall target="ole-impex-master-constraints" />
  </target>
  <target name="ole-impex-master-schema-and-data">
    <property name="impex.schema.name" value="ole-impex-master" />
    <antcall target="schema-and-data" />
  </target>
  <target name="ole-impex-rice-schema-and-data">
    <property name="impex.schema.name" value="ole-impex-rice" />
    <antcall target="schema-and-data" />
  </target>
  <target name="ole-impex-rice-constraints">
    <property name="impex.schema.name" value="ole-impex-rice" />
    <antcall target="constraints" />
  </target>
  <target name="ole-impex-master-constraints">
    <property name="impex.schema.name" value="ole-impex-master" />
    <antcall target="constraints" />
  </target>
  <target name="schema-and-data">
    <mvn pom="classpath:org/kuali/common/deploy/mvn/schema-and-data-sql.xml" filterPom="true" quiet="${mvn.quiet}" silent="false">
      <arg value="initialize" />
    </mvn>
  </target>
  <target name="constraints">
    <mvn pom="classpath:org/kuali/common/deploy/mvn/constraints-sql.xml" filterPom="true" quiet="${mvn.quiet}" silent="false">
      <arg value="initialize" />
    </mvn>
  </target>
</project>