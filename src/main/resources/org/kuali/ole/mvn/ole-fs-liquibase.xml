<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>${parent.groupId}</groupId>
    <artifactId>${parent.artifactId}</artifactId>
    <version>${parent.version}</version>
  </parent>
  <groupId>${project.groupId}</groupId>
  <artifactId>olefs-liquibase</artifactId>
  <version>${project.version}</version>
  <name>OLE Financial System Liquibase</name>
  <description>Execute liquibase change sets</description>
  <properties>
    <liquibase.phase>initialize</liquibase.phase>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.liquibase</groupId>
          <artifactId>liquibase-maven-plugin</artifactId>
          <version>${plugin.liquibase.version}</version>
          <configuration>
            <url>${impex.url}</url>
            <driver>${impex.driver}</driver>
            <username>${impex.username}</username>
            <password>${impex.password}</password>
          </configuration>
          <executions>
            <execution>
              <id>lb-01</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/01_bootstrap_krns_data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>lb-02</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/02_bootstrap_krim_entity_data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>lb-03</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/03_bootstrap_krim_role_perm_data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>lb-04</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/04_demo_krns_data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>lb-05</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/05_demo_krim_entity_data.xml</changeLogFile>
              </configuration>
            </execution>
            <execution>
              <id>lb-06</id>
              <goals>
                <goal>update</goal>
              </goals>
              <phase>${liquibase.phase}</phase>
              <configuration>
                <changeLogFile>${liquibase.source.dir}/06_demo_krim_role_perm_data.xml</changeLogFile>
              </configuration>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>${jdbc.driver.groupId}</groupId>
              <artifactId>${jdbc.driver.artifactId}</artifactId>
              <version>${jdbc.driver.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>com.soebes.maven.plugins</groupId>
          <artifactId>maven-echo-plugin</artifactId>
          <version>0.1</version>
          <executions>
            <execution>
              <id>echo</id>
              <phase>${liquibase.phase}</phase>
              <goals>
                <goal>echo</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <echos>
              <echo>JDBC URL: ${impex.url}</echo>
              <echo> DBA URL: ${impex.url}</echo>
              <echo>Username: ${impex.username}</echo>
              <echo>JDBC Driver: ${impex.driver}</echo>
            </echos>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>com.soebes.maven.plugins</groupId>
        <artifactId>maven-echo-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
