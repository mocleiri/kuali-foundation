<?xml version="1.0" encoding="UTF-8"?>
<controller-info>
  <controller-host>${appdynamics.controllerHost}</controller-host>
  <controller-port>${appdynamics.controllerPort}</controller-port>
  <controller-ssl-enabled>${appdynamics.sslEnabled}</controller-ssl-enabled>
  <enable-orchestration>${appdynamics.enableOrchestration}</enable-orchestration>
  <account-name>${appdynamics.accountName}</account-name>
  <account-access-key>${appdynamics.accountAccessKey}</account-access-key>
  <application-name>${appdynamics.applicationName}</application-name>
  <tier-name>${appdynamics.tierName}</tier-name>
  <!--
    Providing node name caused java -jar machine-agent.jar to throw an error.
    Machine Agent is smart enough to figure out the correct node name automatically if Server Agent is running on the same server.

    <node-name>${dns.hostname}</node-name>
  -->
  <force-agent-registration>${appdynamics.forceAgentRegistration}</force-agent-registration>
</controller-info>
