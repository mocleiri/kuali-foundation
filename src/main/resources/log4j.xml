<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <layout class="org.apache.log4j.PatternLayout">
      <!--
        This shows the package/class/method name
        <param name="ConversionPattern" value="[%-4p] %C - %m%n" />
      -->
      <param name="ConversionPattern" value="[%-4p] %m%n" />
    </layout>
  </appender>
  <!-- Tone down most Spring logging -->
  <logger name="org.springframework">
    <level value="warn" />
  </logger>
  <!-- Turn this back on to get a log message each time Spring loads an XML file -->
  <logger name="org.springframework.beans.factory.xml">
    <level value="warn" />
  </logger>
  <root>
    <priority value="info" />
    <appender-ref ref="console" />
  </root>
</log4j:configuration>